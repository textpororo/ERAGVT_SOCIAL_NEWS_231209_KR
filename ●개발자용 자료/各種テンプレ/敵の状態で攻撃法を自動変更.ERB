;=============== 전투스타일変更条件 ================
@KOJO_0_BATTLE_CHARA_BATTLE_STYLE_CHANGE
;雑魚戦(공격回数を上げるため)
IF FLAG:10 == 2
	SELECTCASE RAND:2
		CASE 0
		CDFLAG:TARGET:근거리:전투스타일=2;장갑
		CDFLAG:TARGET:중거리:전투스타일=2;장갑
		CDFLAG:TARGET:원거리:전투스타일=2;장갑
		CASE 2
		CDFLAG:TARGET:근거리:전투스타일=8;설치
		CDFLAG:TARGET:중거리:전투스타일=8;설치
		CDFLAG:TARGET:원거리:전투스타일=8;설치
		CASEELSE
		CDFLAG:TARGET:근거리:전투스타일=7;지략
		CDFLAG:TARGET:중거리:전투스타일=7;지략
		CDFLAG:TARGET:원거리:전투스타일=7;지략
			
	ENDSELECT
ELSE
	;敵のHPが1/30かつ3000以下
	IF (FLAG:13 < FLAG:12 /30) && (FLAG:13 <3000)
		CDFLAG:TARGET:근거리:전투스타일=6;전력
		CDFLAG:TARGET:중거리:전투스타일=6;전력
		CDFLAG:TARGET:원거리:전투스타일=6;전력


	;敵のHPが半分以上
	ELSEIF (FLAG:13 > FLAG:12 /2)
		CDFLAG:TARGET:근거리:전투스타일=2;장갑
		CDFLAG:TARGET:중거리:전투스타일=1;연속
		CDFLAG:TARGET:원거리:전투스타일=5;광역


	;敵のHPが半分以上で、通常공격
	ELSE
		CDFLAG:TARGET:근거리:전투스타일=8;설치
		CDFLAG:TARGET:중거리:전투스타일=0;통상
		CDFLAG:TARGET:원거리:전투스타일=0;통상
	ENDIF
ENDIF



