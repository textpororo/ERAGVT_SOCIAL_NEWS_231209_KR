;子촉수襲来の内容選択
;********************************************
@SMALL_PRISON_EVENT
;襲う相手が居なければ中断
SIF CHARANUM_ACTIVE() == 0
	RETURN

DRAWLINE
CALL MESSAGE_SMALL_ATTACK
CALL MESSAGE_SMALL_ATTACK_SUCCESS

;幽閉コマンドの選択
;汎用行動の種類　幽閉処理関連のフォルダ内のPRISON_COMX,ERBの数を記述
WHILE 1==1
	LOCAL:1 = RAND:7
	;フタナリならばＣ襲来の確率がアップ
	SIF TALENT:후타나리 > 0 && RAND:10 == 0
		LOCAL:1 = 0
	;처녀を失っていればＶ襲来の確率がアップ
	SIF TALENT:처녀 < 1 && RAND:11 == 0
		LOCAL:1 = 1
	;모유체질ならばＢ襲来の確率がアップ
	SIF TALENT:모유체질 > 0 && RAND:12 == 0
		LOCAL:1 = 3
	;被害者が女で후타나리×ならＣ襲来をＶ襲来に変更
	SIF LOCAL:1 == 0 && ISFEMALE() && CONFIG_CHECK_MANIAC_F(1) == 0
		LOCAL:1 = 1

	;被害者が男ならＶは選ばれない
	IF LOCAL:1 == 1 && ISMALE()
		;남자ならＶ⇒Ｃ
		IF ISMANLY()
			LOCAL:1 = 0
		;보추ならＶ⇒Ａ
		ELSE
			LOCAL:1 = 2
		ENDIF
	ENDIF
	;남자ならＢ襲来をＣ襲来に変更
	;남자対応させたため封印
	;SIF ISMALE() && LOCAL:1 == 3
	;	LOCAL:1 = 0

	;聖처녀はＶ以外にする
	SIF LOCAL:1 != 1 || CHECK_HOLYVIRGIN_F()==0
		BREAK
WEND

CALL SMALL_PRISON_COM,LOCAL:1
PRINTW 

