	CALL PALAM_VABCestimate(LOCAL,3,-1)



	;地の文
	CALLFORM MESSAGE_SMALL_PRISON_COM_3

	IF BASE:B결계내구력

	ELSE
		;정액경험
		LOCAL:123 = 5 + RAND:11

		IF ISFEMALE()
