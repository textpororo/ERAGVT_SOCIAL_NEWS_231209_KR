;----------------------------
;子촉수襲来判定
;----------------------------
@SMALL_TENTACLE_HANTEI
#DIM CCOUNT
;襲えるキャラがいない場合判定しない
SIF CHARANUM_ACTIVE() == 0
	RETURN 0

;男女平等のオプションOff時の中断判定 キャラが全員남자の場合は中断
LOCAL = 0
FOR CCOUNT, 1, CHARANUM
	SIF CFLAG:CCOUNT:999 == 0
		CONTINUE
	SIF ISHOLE(CCOUNT) == 1
		LOCAL ++
	;能動的に動けない場合は除外
	SIF TALENT:CCOUNT:번식자루 > 0 || TALENT:CCOUNT:사지결손 > 0
		CONTINUE
NEXT
SIF LOCAL < 1
	RETURN

;夜でなければ判定しない
SIF TIME != 1
	RETURN 0
;育児済みの촉수の数をLOCALに
LOCAL = FLAG:44
FOR CCOUNT, 0, CHARANUM
	LOCAL -= CFLAG:CCOUNT:220
NEXT
;処理を変更、育児済みの子촉수が居れば襲来判定へ
SIF LOCAL < 1
	RETURN 0
LOCAL:1 = TARGET
;방위력に応じた確率でイベント発生
IF FLAG:852 < 1000 + LOCAL * 50
	LOCAL:2 = RAND:3
ELSEIF FLAG:852 < 2500 + LOCAL * 50
	LOCAL:2 = RAND:4
ELSEIF FLAG:852 < 5000 + LOCAL * 50
	LOCAL:2 = RAND:8
ELSEIF FLAG:852 < 10000 + LOCAL * 50
	LOCAL:2 = RAND:16
ELSEIF FLAG:852 < 15000 + LOCAL * 50
	LOCAL:2 = RAND:32
ELSEIF FLAG:852 < 20000 + LOCAL * 50
	LOCAL:2 = RAND:64
ELSE
	LOCAL:2 = RAND:128
ENDIF
IF LOCAL:2 == 0 && RAND:(12 - FLAG:52 * 2) != 0
	CALL SMALL_TENTACLE_ATTACK
;最低でも5%で発生する
ELSEIF RAND:20 == 10
	CALL SMALL_TENTACLE_ATTACK
;判定失敗時に10匹以上要るならランダムで数が減少する
ELSE
	IF RAND:LOCAL >= 9
		FLAG:44 -= 1
		DRAWLINE
		IF FLAG:52 && (RAND:(FLAG:52) != 0 || LOCAL:2 != 0)
			PRINTW 子촉수は防衛システムに引っかかって黒焦げにされた...
		ELSEIF RAND:2 == 0
			PRINTW 子촉수は何かの動物に襲われた...
		ELSE
			PRINTW 子촉수は迷子になった...
		ENDIF
	ENDIF
ENDIF

TARGET = LOCAL:1

;----------------------------
;子촉수襲来 ターゲット選択
;----------------------------
@SMALL_TENTACLE_ATTACK
LOCAL = RAND:100
LOCAL:1 = 0
DRAWLINE
;1/4の確率で見つかって処分
IF LOCAL < 25
	CALL MESSAGE_SMALL_ATTACK_FAILED
	FLAG:44 -= 1
;ターゲットを決める
ELSE
	$LOOP
	;決まらなかった場合は中断
	IF LOCAL:1 >= 99
		PRINTW 子촉수は迷子になった...
		FLAG:44 -= 1
		DRAWLINE
		RETURN
	ENDIF
	LOCAL = RAND:(CHARANUM - 1) + 1
	LOCAL:1 ++
	SIF CFLAG:LOCAL:999 == 0
		GOTO LOOP
	SIF CFLAG:LOCAL:0 != 0
		GOTO LOOP
	SIF ISHOLE() == 0
		GOTO LOOP

	TARGET = LOCAL
	CALL SMALL_PRISON_EVENT
ENDIF


