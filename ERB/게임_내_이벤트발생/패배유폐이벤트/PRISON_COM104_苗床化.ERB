;**********************************************************
;幽閉コマンド
;PRISON_COM104
;種付け　묘상화されてなければ묘상화される
;**********************************************************
@PRISON_COM104
#DIM CCOUNT
VARSET LOCAL
TFLAG:10 = 104

;取得する珠
;LOCAL:0 쾌C
;LOCAL:1 쾌V
;LOCAL:2 쾌A
;LOCAL:3 쾌B
;LOCAL:4 윤활 윤활は未使用
;LOCAL:5 공순
;LOCAL:6 습득
;LOCAL:7 욕정
;LOCAL:8 굴복
;LOCAL:9 치정
;LOCAL:10 고통
;LOCAL:11 공포

;経験数の上量値記録用
;LOCAL:120 V経験
;LOCAL:121 A経験
;LOCAL:123 정액경험
;LOCAL:124 펠라경험
;LOCAL:130 노출쾌락경험,
;LOCAL:131 봉사쾌락경험,
;LOCAL:132 고통쾌락경험,
;LOCAL:140 자위경험,
;LOCAL:150 이상경험
;LOCAL:151 V확장경험
;LOCAL:152 A확장경험
;LOCAL:153 사정경험
;LOCAL:154 모유경험
;LOCAL:155 방뇨경험
;LOCAL:156 기생경험
;LOCAL:157 출산경험

;汚染度
CFLAG:30 += 10 + RAND:11

;근친교배경험
SIF INCEST_F(TARGET, CFLAG:20 * 100 + CFLAG:21, 1) > 0
	LOCAL:141 += 1

IF TALENT:묘상화 == 0
	;묘상화させる
	TALENT:묘상화 = 1
	
	;공포　固定で
	LOCAL:11 = 800

	;이상경험
	LOCAL:150 = 1

	;촉수의포로ならば펠라경험
	SIF TALENT:촉수의포로
		LOCAL:124 = 4

	;快V
	IF ABL:V감각 == 0
		LOCAL:120 = 2
		LOCAL:1 = 10
	ELSEIF ABL:V감각 == 1
		LOCAL:120 = 5
		LOCAL:1 = 50
	ELSEIF ABL:V감각 == 2
		LOCAL:120 = 8
		LOCAL:1 = 100
	ELSEIF ABL:V감각 == 3
		LOCAL:120 = 11
		LOCAL:1 = 250
	ELSEIF ABL:V감각 == 4
		LOCAL:120 = 15
		LOCAL:1 = 500
	ELSEIF ABL:V감각 >= 5
		LOCAL:120 = 20
		LOCAL:1 = 1000
	ENDIF

	;メイン部位絶頂見込みの予測
	CALL PALAM_VABCestimate(LOCAL,1,-1)


	;처녀であれば처녀を破る
	IF TALENT:처녀 > 0 && SHIELD:1 <= 0
		LOCAL:10 = 500
		CALL LOSTVIRGIN, 1
	ENDIF

	;지문: 흑화 캐릭터가 幽閉中の操作キャラを묘상화した
	SIF CFLAG:20 == 2
		CALL MESSAGE_OTHER_PRISON_NAEDOKO
	;지문: 묘상화
	CALL MESSAGE_PRISON_NAEDOKO
ELSE
	;快V
	IF ABL:V감각 == 0
		LOCAL:120 = 6
		LOCAL:1 = 200
	ELSEIF ABL:V감각 == 1
		LOCAL:120 = 15
		LOCAL:1 = 300
	ELSEIF ABL:V감각 == 2
		LOCAL:120 = 24
		LOCAL:1 = 400
	ELSEIF ABL:V감각 == 3
		LOCAL:120 = 33
		LOCAL:1 = 600
	ELSEIF ABL:V감각 == 4
		LOCAL:120 = 45
		LOCAL:1 = 1200
	ELSEIF ABL:V감각 >= 5
		LOCAL:120 = 60
		LOCAL:1 = 2000
	ENDIF

	;快B
	IF ABL:B감각 == 0
		LOCAL:3 = 1
	ELSEIF ABL:B감각 == 1
		LOCAL:3 = 5
	ELSEIF ABL:B감각 == 2
		LOCAL:3 = 20
	ELSEIF ABL:B감각 == 3
		LOCAL:3 = 100
	ELSEIF ABL:B감각 == 4
		LOCAL:3 = 200
	ELSEIF ABL:B감각 >= 5
		LOCAL:3 = 400
	ENDIF

	;メイン部位絶頂見込みの予測
	CALL PALAM_VABCestimate(LOCAL,1,3,-1)



	;공순
	IF ABL:순종 == 2
		LOCAL:5 = 1000
	ELSEIF ABL:순종 == 3
		LOCAL:5 = 1200
	ELSEIF ABL:순종 == 4
		LOCAL:5 = 1500
	ELSEIF ABL:순종 >= 5
		LOCAL:5 = 2000
	ENDIF

	;ここに来るなら처녀でないはずだが、一応
	IF TALENT:처녀 > 0 && SHIELD:1 <= 0
		LOCAL:10 = 500
		CALL LOSTVIRGIN, 1
	ENDIF

	;굴복　とりあえず一定で
	LOCAL:8 = 800

	;V감각が低いと공포が入る
	IF ABL:V감각 == 0
		LOCAL:11 = 800
	ELSEIF ABL:V감각 == 1
		LOCAL:11 = 400
	ELSEIF ABL:V감각 == 2
		LOCAL:11 = 200
	ELSEIF ABL:V감각 == 3
		LOCAL:11 = 100
	ELSE
	ENDIF

	;습득
	IF ABL:봉사정신 == 0
		LOCAL:6 = 5
	ELSEIF ABL:봉사정신 == 1
		LOCAL:6 = 12
	ELSEIF ABL:봉사정신 == 2
		LOCAL:6 = 25
	ELSEIF ABL:봉사정신 == 3
		LOCAL:6 = 40
	ELSEIF ABL:봉사정신 == 4
		LOCAL:6 = 62
	ELSEIF ABL:봉사정신 >= 5
		LOCAL:6 = 90
	ENDIF

	;정액경험
	LOCAL:123 = 120

	;지문: 흑화 캐릭터가 幽閉中の操作キャラに種付けした
	SIF CFLAG:20 == 2
		CALL MESSAGE_OTHER_PRISON_COM_104
	;지문: 種付け
	CALL MESSAGE_PRISON_COM_104

ENDIF

;습득基本値
LOCAL:6 += 20

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 250

;치정基本値
LOCAL:9 += 0

;고통基本値
LOCAL:10 += 250

;공포基本値
LOCAL:11 += 250

;幽閉中パラメータ変動共通処理へ
CALL COMMON_PRISON, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11

;経験数の増加
CALL COMMON_PRISON_EXP_SH, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152
LOCAL:120 = RESULT:0
LOCAL:121 = RESULT:1
LOCAL:151 = RESULT:2
LOCAL:152 = RESULT:3

;拡張度による拡張経験
CALL PRISON_GAPING, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152, LOCAL:152, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3
LOCAL:151 += RESULT:0
LOCAL:152 += RESULT:1

;表示と増加の処理
FOR CCOUNT, 100, 200
	CALL COMMON_PRISON_EXP, CCOUNT, LOCAL:CCOUNT
NEXT

PRINTL 

;珠の取得へ
CALL _ABLUP, 1
;임신
SIF SHIELD:1 <= 0
	TRYCALL NINSIN_HANTEI,120,60