;**********************************************************
;幽閉コマンド
;PRISON_COM102
;A拡張
;**********************************************************
@PRISON_COM102
#DIM CCOUNT
VARSET LOCAL
TFLAG:10 = 102

;取得する珠
;LOCAL:0 쾌C
;LOCAL:1 쾌V
;LOCAL:2 쾌A
;LOCAL:3 쾌B
;LOCAL:4 윤활 윤활は未使用
;LOCAL:5 공순
;LOCAL:6 습득
;LOCAL:7 욕정
;LOCAL:8 굴복
;LOCAL:9 치정
;LOCAL:10 고통
;LOCAL:11 공포

;経験数の上量値記録用
;LOCAL:120 V経験
;LOCAL:121 A経験
;LOCAL:123 정액경험
;LOCAL:124 펠라경험
;LOCAL:130 노출쾌락경험,
;LOCAL:131 봉사쾌락경험,
;LOCAL:132 고통쾌락경험,
;LOCAL:140 자위경험,
;LOCAL:150 이상경험
;LOCAL:151 V확장경험
;LOCAL:152 A확장경험
;LOCAL:153 사정경험
;LOCAL:154 모유경험
;LOCAL:155 방뇨경험
;LOCAL:156 기생경험
;LOCAL:157 출산경험

;汚染度
CFLAG:30 += 10 + RAND:5

;근친교배경험
SIF INCEST_F(TARGET, CFLAG:20 * 100 + CFLAG:21, 1) > 0
	LOCAL:141 += 1

;快A
IF ABL:A감각 == 0
	LOCAL:121 = 5
	LOCAL:152 = 1
	LOCAL:2 = 100
ELSEIF ABL:A감각 == 1
	LOCAL:121 = 8
	LOCAL:152 = 1
	LOCAL:2 = 150
ELSEIF ABL:A감각 == 2
	LOCAL:121 = 11
	LOCAL:152 = 2
	LOCAL:2 = 200
ELSEIF ABL:A감각 == 3
	LOCAL:121 = 15
	LOCAL:152 = 2
	LOCAL:2 = 600
ELSEIF ABL:A감각 == 4
	LOCAL:121 = 20
	LOCAL:152 = 4
	LOCAL:2 = 1000
ELSEIF ABL:A감각 >= 5
	LOCAL:121 = 30
	LOCAL:152 = 8
	LOCAL:2 = 1500
ENDIF
;拡張経験が少ない場合は快Aが入りにくい
IF EXP:A확장경험 < 3
	TIMES LOCAL:2, 0.10
ELSEIF EXP:A확장경험 < 5
	TIMES LOCAL:2, 0.50
ELSEIF EXP:A확장경험 < 8
	TIMES LOCAL:2, 0.80
ELSE
ENDIF

;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,2,-1)



;굴복
;拡張経験に応じて
IF EXP:A확장경험 < 3
	LOCAL:8 = 500
ELSEIF EXP:A확장경험 < 5
	LOCAL:8 = 1000
ELSEIF EXP:A확장경험 < 8
	LOCAL:8 = 2000
ELSE
	LOCAL:8 = 5000
ENDIF

;치정
;拡張経験が高いと치정が入る
IF EXP:A확장경험 < 3
	LOCAL:8 = 500
ELSEIF EXP:A확장경험 < 5
	LOCAL:9 = 1000
ELSEIF EXP:A확장경험 < 8
	LOCAL:9 = 2000
ELSE
	LOCAL:9 = 5000
ENDIF

;고통
;拡張経験が低いと入る
IF EXP:A확장경험 < 3
	LOCAL:10 = 1000
ELSEIF EXP:A확장경험 < 5
	LOCAL:10 = 800
ELSEIF EXP:A확장경험 < 8
	LOCAL:10 = 400
ELSE
	LOCAL:10 = 100
ENDIF

;공포
;拡張経験が低いと入る
IF EXP:A확장경험 < 3
	LOCAL:11 = 1000
ELSEIF EXP:A확장경험 < 5
	LOCAL:11 = 800
ELSEIF EXP:A확장경험 < 8
	LOCAL:11 = 400
ELSE
	LOCAL:11 = 100
ENDIF

;습득
IF ABL:봉사정신 == 0
	LOCAL:6 = 5
ELSEIF ABL:봉사정신 == 1
	LOCAL:6 = 12
ELSEIF ABL:봉사정신 == 2
	LOCAL:6 = 25
ELSEIF ABL:봉사정신 == 3
	LOCAL:6 = 40
ELSEIF ABL:봉사정신 == 4
	LOCAL:6 = 62
ELSEIF ABL:봉사정신 >= 5
	LOCAL:6 = 90
ENDIF

;지문: 悪堕ちキャラが幽閉中の操作キャラにA拡張をした
SIF CFLAG:20 == 2
	CALL MESSAGE_OTHER_PRISON_COM_102
;지문: A拡張
CALL MESSAGE_PRISON_COM_102

;습득基本値
LOCAL:6 += 20

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 0

;고통基本値
LOCAL:10 += 100

;공포基本値
LOCAL:11 += 100

;LOCAL:152 += RAND:2 + 1

;初めてのA拡張の場合、이상경험が入る
IF CFLAG:203 == 0
	CFLAG:203 = 1
	LOCAL:150 = 1
ENDIF

;幽閉中パラメータ変動共通処理へ
CALL COMMON_PRISON, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11

;経験数の増加
CALL COMMON_PRISON_EXP_SH, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152
LOCAL:120 = RESULT:0
LOCAL:121 = RESULT:1
LOCAL:151 = RESULT:2
LOCAL:152 = RESULT:3

;拡張度による拡張経験
CALL PRISON_GAPING, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152, LOCAL:152, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3
LOCAL:151 += RESULT:0
LOCAL:152 += RESULT:1

;表示と増加の処理
FOR CCOUNT, 100, 200
	CALL COMMON_PRISON_EXP, CCOUNT, LOCAL:CCOUNT
NEXT

PRINTL 

;珠の取得へ
CALL _ABLUP, 1
