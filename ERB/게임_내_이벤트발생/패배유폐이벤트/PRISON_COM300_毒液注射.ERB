;**********************************************************
;유폐コマンド
;PRISON_COM300
;注射
;**********************************************************
@PRISON_COM300
#DIM CCOUNT
VARSET LOCAL
TFLAG:10 = 300

;取得する珠
;LOCAL:0 쾌Ｃ
;LOCAL:1 쾌Ｖ
;LOCAL:2 쾌Ａ
;LOCAL:3 쾌Ｂ
;LOCAL:4 윤활 윤활は未使用
;LOCAL:5 공순
;LOCAL:6 습득
;LOCAL:7 욕정
;LOCAL:8 굴복
;LOCAL:9 치정
;LOCAL:10 고통
;LOCAL:11 공포

;経験数の上量値記録用
;LOCAL:120 V経験
;LOCAL:121 A経験
;LOCAL:123 정액경험
;LOCAL:124 펠라경험
;LOCAL:130 노출쾌락경험,
;LOCAL:131 봉사쾌락경험,
;LOCAL:132 고통쾌락경험,
;LOCAL:140 자위경험,
;LOCAL:150 이상경험
;LOCAL:151 Ｖ확장경험
;LOCAL:152 Ａ확장경험
;LOCAL:153 사정경험
;LOCAL:154 모유경험
;LOCAL:155 방뇨경험
;LOCAL:156 기생경험
;LOCAL:157 출산경험

;汚染度
CFLAG:30 += 20 + RAND:10

;근친교배경험
SIF INCEST_F(TARGET, CFLAG:20 * 100 + CFLAG:21, 1) > 0
	LOCAL:141 += 1

;快C
IF ABL:Ｃ감각 == 0
	LOCAL:0 = 500
ELSEIF ABL:Ｃ감각 == 1
	LOCAL:0 = 700
ELSEIF ABL:Ｃ감각 == 2
	LOCAL:0 = 900
ELSEIF ABL:Ｃ감각 == 3
	LOCAL:0 = 1100
ELSEIF ABL:Ｃ감각 == 4
	LOCAL:0 = 1300
ELSE
	LOCAL:0 = 1500
ENDIF

;快V
IF ISFEMALE()
	IF ABL:Ｖ감각 == 0
		LOCAL:120 = 2
		LOCAL:1 = 500
	ELSEIF ABL:Ｖ감각 == 1
		LOCAL:120 = 5
		LOCAL:1 = 700
	ELSEIF ABL:Ｖ감각 == 2
		LOCAL:120 = 8
		LOCAL:1 = 900
	ELSEIF ABL:Ｖ감각 == 3
		LOCAL:120 = 11
		LOCAL:1 = 1100
	ELSEIF ABL:Ｖ감각 == 4
		LOCAL:120 = 15
		LOCAL:1 = 1300
	ELSEIF ABL:Ｖ감각 >= 5
		LOCAL:120 = 20
		LOCAL:1 = 1500
	ENDIF
ENDIF

;快A
;A経験がないならAには入れない
IF EXP:Ａ경험 > 0
	IF ABL:Ａ감각 == 0
		LOCAL:121 = 2
		LOCAL:2 = 500
	ELSEIF ABL:Ａ감각 == 1
		LOCAL:121 = 5
		LOCAL:2 = 700
	ELSEIF ABL:Ａ감각 == 2
		LOCAL:121 = 8
		LOCAL:2 = 900
	ELSEIF ABL:Ａ감각 == 3
		LOCAL:121 = 11
		LOCAL:2 = 1100
	ELSEIF ABL:Ａ감각 == 4
		LOCAL:121 = 15
		LOCAL:2 = 1300
	ELSEIF ABL:Ａ감각 >= 5
		LOCAL:121 = 20
		LOCAL:2 = 1500
	ENDIF
ENDIF

;快B
IF ABL:Ｂ감각 == 0
	LOCAL:3 = 500
ELSEIF ABL:Ｂ감각 == 1
	LOCAL:3 = 700
ELSEIF ABL:Ｂ감각 == 2
	LOCAL:3 = 900
ELSEIF ABL:Ｂ감각 == 3
	LOCAL:3 = 1100
ELSEIF ABL:Ｂ감각 == 4
	LOCAL:3 = 1300
ELSEIF ABL:Ｂ감각 >= 5
	LOCAL:3 = 1500
ENDIF

;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,0,1,2,3,-1)



;지문: 흑화 캐릭터가 유폐中の操作キャラに注射をした
SIF CFLAG:20 == 2
	CALL MESSAGE_OTHER_PRISON_COM_300
;지문: 注射
CALL MESSAGE_PRISON_COM_300

;습득基本値
LOCAL:6 += 0

;욕정基本値
LOCAL:7 += 1000

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 0

;고통基本値
LOCAL:10 += 500

;공포基本値
LOCAL:11 += 500

;유폐中パラメータ変動共通処理へ
CALL COMMON_PRISON, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11

;経験数の増加
CALL COMMON_PRISON_EXP_SH, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152
LOCAL:120 = RESULT:0
LOCAL:121 = RESULT:1
LOCAL:151 = RESULT:2
LOCAL:152 = RESULT:3

;拡張度による拡張経験
CALL PRISON_GAPING, LOCAL:120, LOCAL:121, LOCAL:151, LOCAL:152, LOCAL:152, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3
LOCAL:151 += RESULT:0
LOCAL:152 += RESULT:1

;表示と増加の処理
FOR CCOUNT, 100, 200
	CALL COMMON_PRISON_EXP, CCOUNT, LOCAL:CCOUNT
NEXT

PRINTL 

;注射による음란系素質の取得
;음핵
;Ｃ감각が5
IF TALENT:음핵 == 0 && ABL:Ｃ감각 >= 5
	TALENT:음핵 = 1
	;지문: 음핵
	CALL MESSAGE_GETTALENT_INKAKU
ENDIF
;음호
;Ｖ감각が5、V経験が200以上
IF TALENT:음호 == 0 && ABL:Ｖ감각 >= 5 && EXP:Ｖ경험 >= 200
	TALENT:음호 = 1
	;지문: 음호
	CALL MESSAGE_GETTALENT_INTUBO
ENDIF
;음고
;Ａ감각が5、A経験が200以上
IF TALENT:음고 == 0 && ABL:Ａ감각 >= 5 && EXP:Ａ경험 >= 200
	TALENT:음고 = 1
	;지문: 음고
	CALL MESSAGE_GETTALENT_INJIRI
ENDIF
;음유
;Ｂ감각が5
IF TALENT:음유 == 0 && ABL:Ｂ감각 >= 5
	TALENT:음유 = 1
	;지문: 음유
	CALL MESSAGE_GETTALENT_INNYUU
ENDIF


;珠の取得へ
CALL _ABLUP, 1
