;--------------------------------------------------
;息抜き回復処理
@PASTIME_REST
;체력・기력・성내성・疲労度の回復
;체력は基本10%回復する
;기력は基本30%回復する
;성내성は50%回復する
;疲労度は施設拡張していくと最終的に逆転

LOCAL:1 = 10
LOCAL:2 = 30

IF TALENT:회복빠름 > 0
	LOCAL:1 += 5
	LOCAL:2 += 5
ELSEIF TALENT:회복느림 > 0
	LOCAL:1 -= 5
	LOCAL:2 += 5
ENDIF
;FEAT効果による回復量補正
IF TALENT:마력저장 > 0
	LOCAL:1 -= 5
	LOCAL:2 -= 5
ENDIF
IF TALENT:불로장수 > 0
	LOCAL:1 -= 5
	LOCAL:2 -= 5
ENDIF
SIF TALENT:넘치는생명력 > 0
	LOCAL:1 += 10
	LOCAL:2 += 10
LOCAL = MAXBASE:체력 * LOCAL:1 / 100 + 200
BASE:체력 = LIMIT(LOCAL + BASE:체력, 0, MAXBASE:체력)

LOCAL = MAXBASE:기력 * LOCAL:2 / 100 + 200
BASE:기력 = LIMIT(LOCAL + BASE:기력, 0, MAXBASE:기력)

BASE:성내성 = LIMIT(BASE:성내성 + (MAXBASE:성내성 / 2), 0, MAXBASE:성내성)

IF CFLAG:0 != -1 && CFLAG:999 != 0
	;구상
	;TRYCALLFORM KOJO_ROOT(CFLAG:6, "REST")

	;疲労の回復
	IF CFLAG:99 > 0
		CFLAG:99 -= 10
		SIF CFLAG:99 < 0
			CFLAG:99 = 0
		IF CFLAG:99 == 0
			PRINTFORML %CALLNAME:TARGET%の身体から疲労が完全に抜けた！
		ELSE
			PRINTFORML %CALLNAME:TARGET%の身体から疲労が少し抜けた…
		ENDIF
	ENDIF
	PRINTL 

	SIF BASE:체력 == MAXBASE:체력 && BASE:기력 == MAXBASE:기력 && CFLAG:99 == 0
		PRINTFORML %CALLNAME:TARGET%は最大まで回復した！

	IF CONFIG_CHECK_SCREEN_F(3) == 0
		PRINTW 
	ELSE
		PRINTL 
	ENDIF
ENDIF

