
;ゲーム開始時に呼び出す컨피그の初期設定
;プリセットを増やす場合はCONFIG_SYSTEM.ERBとにらめっこしてください
@CONFIG_INIT(ARG)
SELECTCASE ARG

	;■グローバルデータから引き継ぎ
	CASE 0
		;800:컨피그設定関係(GLOBALの自動ロード)
		FLAG:800 = 1
		FLAG:801 = GLOBAL:11
		FLAG:802 = GLOBAL:12
		FLAG:803 = GLOBAL:13
		FLAG:804 = GLOBAL:14
		FLAG:805 = GLOBAL:15
	;■基本セット(初期～0.394以前に準拠、vs촉수以外の各要素は控えめ)
	CASE 1
		;800:컨피그設定関係(＋自動ロードOFFに)
		FLAG:800 = 0
		;801:画面表示関係 0(素質のカテゴリ表示)
		FLAG:801 = 1
		;802:イベント関連 0123(악질 시민イベントまでON)
		FLAG:802 = 1+2+4+8
		;803:ゲームバランス変更 012(オート振り解きまでON)8(行動不能時必中)
		FLAG:803 = 1+2+4        +256
		;804:幽閉オプション 0(男は幽閉時に女体化)
		FLAG:804 = 1
		;805:その他オプション(항복한다使用) 
		FLAG:805 = 2

	;■淫獄セット(要素盛り多め)
	CASE 2
		;800:컨피그設定関係
		FLAG:800 = 0
		;801:画面表示関係(＋ウェイト削減、미성숙代替素質)
		FLAG:801 = 1    +8+16
		;802:イベント関連(＋ザコ敵戦)
		FLAG:802 = 1+2+4+8+16
		;803:ゲームバランス変更(＋쾌A増加)
		FLAG:803 = 1+2+4+128+256
		;804:幽閉オプション (＋흑화あり(好み分かれそうな肌の色のみ除く))
		FLAG:804 = 1+2+4  +16+32+64+128
		;805:その他オプション (촉수からも娘出産・裏プロフィール使用)
		FLAG:805 = 1+2+64

	;■악질 시민セット(＋악질 시민関連が全開放)
	CASE 3
		;800:컨피그設定関係
		FLAG:800 = 0
		;801:画面表示関係
		FLAG:801 = 1    +8+16
		;802:イベント関連(ナンパレイプ時に악질 시민戦ON)
		FLAG:802 = 1+2+4+8+16+32
		;803:ゲームバランス変更
		FLAG:803 = 1+2+4+128+256
		;804:幽閉オプション (악질 시민脅迫幽閉ON)
		FLAG:804 = 1+2+4  +16+32+64+128   +1024
		;805:その他オプション
		FLAG:805 = 1+2+64

ENDSELECT
