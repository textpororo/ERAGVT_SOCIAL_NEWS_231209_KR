;キャラの変身後名の설정
@FIRSTSETTING_CHARA_TRANSAFTERNAME, ARG
#DIMS STR_UP
#DIMS STR_DOWN
RESULTS = 
;変身後名に関する설정値
;CSTR:ARG:0 = %STRCLEAR()%
;上の句と下の句が既に保存されているなら記録しておく
STR_UP = %CSTR:ARG:201%
STR_DOWN = %CSTR:ARG:202%
;초기화
CSTR:ARG:201 = %STRCLEAR()%
CSTR:ARG:202 = %STRCLEAR()%
LOCAL:0 = 0

PRINTFORML {ARG:0}人目のキャラ 『%CALLNAME:ARG%』 の変身後名を설정してください
PRINTL （変身中の正式なキャラ名です。一部の지문や스테이터스 표시などに使用されます）
PRINTL ・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・
PRINTL [0]설정しない
PRINTL [1]自分で설정
PRINTL [2]ランダム にする
PRINTFORML [3]『%CALLNAME:ARG%』とランダムの組み合わせにする
IF FLAG:6 == 1
	PRINTFORML [4]『%SAVESTR:11%』とランダムの組み合わせにする
	PRINTFORML [5]『%SAVESTR:11%%CALLNAME:ARG%』 にする
	PRINTFORML [6]『%CALLNAME:ARG%%SAVESTR:11%』 にする
ENDIF
$INPUT_LOOP
INPUT
LOCAL:99 = RESULT
IF (FLAG:6 == 0 && (RESULT < 0 || RESULT > 4)) || (FLAG:6 == 1 && (RESULT < 0 || RESULT > 8))
	GOTO INPUT_LOOP
ELSEIF RESULT == 0
	CFLAG:ARG:2 = 0
	;변신 후 통칭も削除
	CFLAG:ARG:3 = 0
	CSTR:ARG:1 = %STRCLEAR()%
	PRINTFORML 変身後名を설정しませんでした
ELSEIF RESULT == 1
	CFLAG:ARG:2 = 1
	PRINTL 変身後名を入力してください
	SIF CSTR:ARG:0 != ""
		PRINTFORML [999]変更しない（%CSTR:ARG:0%）
	$INPUT_LOOP_1_2
	INPUTS
	IF RESULTS == ""
		GOTO INPUT_LOOP_1_2
	ELSEIF RESULTS == "999" && CSTR:ARG:0 != ""
	ELSE
		CSTR:ARG:0 = %RESULTS%
	ENDIF
	PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
	;変身後名も合わせる
	CSTR:ARG:1 = %CSTR:ARG:0%
	CFLAG:ARG:3 = 1
ELSEIF RESULT == 2
	CALL FIRSTSETTING_RANDOMNAMING_ALL
	IF RESULT == 99
		PRINTFORML 変身後名を選ばずに戻ります
		RETURN
	ENDIF
	CFLAG:ARG:2 = 1
	CSTR:ARG:0 = %STR:(DA:0:RESULT)%%STR:(DA:1:RESULT)%
	PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
	CSTR:ARG:201 = %STR:(DA:0:RESULT)%
	CSTR:ARG:202 = %STR:(DA:1:RESULT)%
	;変身後名も合わせる
	CSTR:ARG:1 = %CSTR:ARG:0%
	CFLAG:ARG:3 = 1
ELSEIF RESULT == 3
	CFLAG:ARG:2 = 1
	CSTR:ARG:201 = %CALLNAME:ARG%
	PRINTL 
	PRINT 組み合わせる単語の
	$INPUT_LOOP_CHILD_3_0
	CALL FIRSTSETTING_RANDOMNAMING, 1, ARG, CALLNAME:ARG
	PRINTL 
	SIF RESULT:1 == 1
		GOTO INPUT_LOOP_CHILD_3_0
	LOCAL:99 = RESULT
	$INPUT_LOOP_CHILD_3_1
	PRINTFORML 変身後名を 『%RESULTS%』 に설정します。よろしいですか？
	PRINTL 
	PRINTL [0] 아니오
	PRINTL [1] 네
	SIF CSTR:ARG:0 != ""
		PRINTFORML [2]変更しない（%CSTR:ARG:0%）
	$INPUT_LOOP_CHILD_3_2
	INPUT
	IF RESULT == 0
		CSTR:ARG:201 = %STR_UP%
		CSTR:ARG:202 = %STR_DOWN%
		GOTO INPUT_LOOP_CHILD_3_0
	ELSEIF RESULT == 1
		CSTR:ARG:0 = %RESULTS%
		PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
		;変身後名も合わせる
		CSTR:ARG:1 = %CSTR:ARG:0%
		CFLAG:ARG:3 = 1
	ELSEIF RESULT == 2
	ELSE
		GOTO INPUT_LOOP_CHILD_3_2
	ENDIF
ELSEIF RESULT == 4
	CFLAG:ARG:2 = 1
	CSTR:ARG:201 = %SAVESTR:11%
	PRINTL 
	PRINT 組み合わせる単語の
	$INPUT_LOOP_CHILD_5_0
	CALL FIRSTSETTING_RANDOMNAMING, 1, ARG, SAVESTR:11
	PRINTL 
	SIF RESULT:1 == 1
		GOTO INPUT_LOOP_CHILD_5_0
	LOCAL:99 = RESULT
	$INPUT_LOOP_CHILD_5_1
	PRINTFORML 変身後名を 『%RESULTS%』 に설정します。よろしいですか？
	PRINTL 
	PRINTL [0] 아니오
	PRINTL [1] 네
	SIF CSTR:ARG:0 != ""
		PRINTFORML [2]変更しない（%CSTR:ARG:0%）
	$INPUT_LOOP_CHILD_5_2
	INPUT
	IF RESULT == 0
		CSTR:ARG:201 = %STR_UP%
		CSTR:ARG:202 = %STR_DOWN%
		GOTO INPUT_LOOP_CHILD_5_0
	ELSEIF RESULT == 1
		CSTR:ARG:0 = %RESULTS%
		PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
		;変身後名も合わせる
		CSTR:ARG:1 = %CSTR:ARG:0%
		CFLAG:ARG:3 = 1
	ELSEIF RESULT == 2
	ELSE
		GOTO INPUT_LOOP_CHILD_5_2
	ENDIF

ELSEIF RESULT == 5
	CFLAG:ARG:2 = 1
	CSTR:ARG:201 = %SAVESTR:11%
	CSTR:ARG:202 = %CALLNAME:ARG%
	CSTR:ARG:0 = %SAVESTR:11%%CALLNAME:ARG%
	PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
	;変身後名も合わせる
	CSTR:ARG:1 = %CSTR:ARG:0%
	CFLAG:ARG:3 = 1
ELSEIF RESULT == 6
	CFLAG:ARG:2 = 1
	CSTR:ARG:201 = %CALLNAME:ARG%
	CSTR:ARG:202 = %SAVESTR:11%
	CSTR:ARG:0 = %CALLNAME:ARG%%SAVESTR:11%
	PRINTFORML 変身後名を 『%CSTR:ARG:0%』 に설정しました
	;変身後名も合わせる
	CSTR:ARG:1 = %CSTR:ARG:0%
	CFLAG:ARG:3 = 1
ENDIF
PRINTL 
