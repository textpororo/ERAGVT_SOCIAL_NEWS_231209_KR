	INPUT
	IF RESULT < 0 || RESULT > 2
		GOTO INPUT_LOOP_CHILD_1_2
	ELSEIF RESULT == 0
		FLAG:6 = 0
		GOTO INPUT_LOOP_CHILD_1_0
	ELSEIF RESULT == 1
		SAVESTR:11 = %RESULTS%
		IF RESULTS == ""
			FLAG:6 = 0
			PRINTL 관명을 설정하지 않았습니다.
			RESULTS = 
		ELSE
			PRINTFORML 관명을『%SAVESTR:11%』%조사만처리(SAVESTR:11,"로")% 설정했습니다.
		ENDIF
	ELSEIF RESULT == 2
	ENDIF
ELSEIF RESULT == 2
	FLAG:6 = 1
	PRINTL 관명을 입력해 주십시오.
	SIF SAVESTR:11 != ""
		PRINTFORML [999] 변경하지 않는다（%SAVESTR:11%）
	$INPUT_LOOP_CHILD_2
	INPUTS
	IF RESULTS == ""
		GOTO INPUT_LOOP_CHILD_2
	ELSEIF RESULTS == "999"
	ELSE
		SAVESTR:11 = %RESULTS%
		PRINTFORML 관명을『%SAVESTR:11%』%조사만처리(SAVESTR:11,"로")% 설정했습니다.
	ENDIF
ELSEIF RESULT == 99
	RETURN 99
ELSE
	GOTO INPUT_LOOP
ENDIF
