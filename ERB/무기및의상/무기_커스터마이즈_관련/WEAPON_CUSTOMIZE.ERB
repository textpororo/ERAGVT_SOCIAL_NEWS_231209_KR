RESETCOLOR
CALL FSTYLE_ATTACK,ARG,2,1
PRINTFORML └[22] 전투 스타일　<<%FSTYLE_NAME_F(ARG,2)%>>%"", LENGTH - 40, LEFT%
PRINTFORM 　　　　　---> 위력　　　：【{RESULT}】
CALL SET_FSTYLE_INFO,ARG,2
PRINTFORML （ %RESULTS:0% ）
PRINTFORML 　　　　　---> %RESULTS:1%
PRINTFORML 　　　　　---> %RESULTS:2%

CALL SHORTLINE
PRINTFORML ◆원거리 무기
IF CSTR:ARG:7 != ""
	PRINTFORML ├[30] 무기명 『%CSTR:ARG:7%』
