				sp=ep+1
				STRFIND LOCALS,",",sp
				ep=RESULT
				SUBSTRING LOCALS,sp,ep-sp

				res=toint(RESULTS)

			ENDIF
		;변신 후 데이터가 없는 경우
		ELSE
			STRFIND LOCALS,",",sp
			ep=RESULT
			SUBSTRING LOCALS,sp,ep-sp

			res=toint(RESULTS)

		ENDIF
	ENDIF

	;PRINTFORML %MODE%:%LOCALS%⇒{sp},{ep-sp}=★{res}

