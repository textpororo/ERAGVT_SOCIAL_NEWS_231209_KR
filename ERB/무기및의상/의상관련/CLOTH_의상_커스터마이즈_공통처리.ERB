@CLOTH_HOSEI(ARG,ID,MODE,SHOPR)
#DIM ID,1
#DIMS MODE,1
#DIM SHOPR,1
;발견 위치
	#DIM sp,1
	#DIM ep,1
	;구분 문자
	#DIM sep,1
	;함수 개별 호출 필수 플래그(분기 조건이 특수한 경우…하카마의「겉옷이 없으면 회피 상승」등)
	#DIM needcall,1
;결과
#DIM res,1

;스테이터스 보정 문자열 획득
TRYCCALLFORM CLOTH_STATUS_{ID}
CATCH
	SAVESTR:0'=""
ENDCATCH
LOCALS'=SAVESTR:0

IF LOCALS==""
	;
ENDIF

sp=-1
ep=-1
sep=-1
needcall=-1
res=-99999

;●평상시의 데이터를 검색
STRFIND LOCALS,MODE,0
sp=RESULT

IF sp>-1
	;포인터를 키워드 직후(=파라미터 기술 위치)로 이동
	STRLENS ""+mode
	sp+=RESULT

	;개별적으로 함수를 부를 필요가 있는(복잡한 분기 조건을 가진) 경우
	STRFIND LOCALS,"!",sp
	IF RESULT==sp
		CALLFORM CLOTH_HOSEI_%MODE%_{ID}
		res=RESULT
	;통상의 문자열 데이터로 지정되어 있는 경우
	ELSE

		;변신 후 파라미터 변동하는 경우
		STRFIND LOCALS,"@",sp
		ep=RESULT
		;발견한 "@"가 구분 문자보다 오른쪽에 있으면 다른 항목에 대한 오폭이므로 취소
		STRFIND LOCALS,",",sp
		sep=RESULT
		SIF ep>sep
			ep=-1


		;PRINTL
		;PRINTFORML %MODE%:%LOCALS%⇒{sp},{ep-sp}=★{res}

