;**********************************************************
;ARG:0으로 색 지정
;ARG:1로 표시할 문자열 지정
;
;HTML 3.0 및 Windows표준 16색을 초기 설정
;
;갱신 이력
;2018.02.14 함수 작성, 표준 16색 등록 by 雑魚の人
;**********************************************************
@PRINT_RGBTEXT(ARGS:0,ARGS:1)
#DIMS PRINT_CTEXT
#DIM BGCOLOR_NOW
#DIM TEXTCOLOR_NOW

PRINT_CTEXT=%ARGS:1%

SELECTCASE ARGS:0
	;****************【HTML 3.0사양＆Windows표준 16색】****************
	;********************************
	CASE "赤" , "レッド" , "Red" , "RED" , "Ｒｅｄ" , "ＲＥＤ"
		SETCOLOR 0xFF0000
	CASE "栗色" , "えび茶色" , "マルーン" , "Maroon", "MAROON" , "Ｍａｒｏｏｎ" , ""
		SETCOLOR 0x800000
	CASE "オリーブ" , "オリーブ色" , "Olive" , "OLIVE"
		SETCOLOR 0x808000
	CASE "黄" , "イエロー" , "Yellow" , "YELLOW" , "Ｙｅｌｌｏｗ" , "ＹＥＬＬＯＷ"
		SETCOLOR 0xFFFF00
	CASE "ライム" , "Lime" , "LIME" , "Ｌｉｍｅ" , "ＬＩＭＥ"
		SETCOLOR 0x00FF00
	CASE "緑" , "グリーン"  , "Green" , "GREEN" , "Ｇｒｅｅｎ" , "ＧＲＥＥＮ"
		SETCOLOR 0x008000
	CASE "水色" , "アクア" , "Aqua" , "AQUA" , "Ａｑｕａ" , "ＡＱＵＡ"
		SETCOLOR 0x00FFFF
	CASE "鴨の羽色" , "鴨の色" ,"真鴨色" , "Teal" , "TEAL" , "Ｔｅａｌ" , "ＴＥＡＬ"
		SETCOLOR 0x008080
	CASE "青" , "ブルー" , "Blue" , "BLUE"  , "Ｂｌｕｅ" , "ＢＬＵＥ"
		SETCOLOR 0x0000FF
	CASE "ネイビー" , "ネイビー色" , "紺色" , "濃紺" , "ネイビーブルー" , "Navy" , "NAVY" , "Ｎａｖｙ" , "ＮＡＶＹ"
		SETCOLOR 0x008080
	CASE "赤紫" , "マゼンタ" , "フクシア" , "フューシャ" , "Fuchsia" , "FUCHSIA" , "Magenta" , "MAGENTA"
		SETCOLOR 0xFF00FF
	CASE "紫" ,  "パープル" , "Purple" , "PURPLE" , "Ｐｕｒｐｌｅ" , "ＰＵＲＰＬＥ"
		SETCOLOR 0x800080
	CASE "透明" , "純白" , "ホワイト" , "White" , "WHITE" , "Ｗｈｉｔｅ" , "ＷＨＩＴＥ"
		SETCOLOR 0xFFFFFF
	CASE "灰色" , "灰" , "グレイ" , "Gray"
		SETCOLOR 0x808080
	CASE "Silver"
		SETCOLOR 0xC0C0C0
	CASE "黒" , "漆黒" , "純黒" , "真っ黒" , "ブラック" , "Black" , "BLACK" ,"Ｂｌａｃｋ" , "ＢＬＡＣＫ"
		SETCOLOR 0x000000



	;****************【X11의 색 명칭】****************



	;****************【기타】****************
	CASE "薔薇色"
		SETCOLOR 0xFF0037
	CASE "	銀朱"
		SETCOLOR 0xF80606
	CASE "ローズ"
		SETCOLOR 0xFF0037
	CASE "イチゴ" , "いちご" , "苺" , "ストロベリー"
		SETCOLOR 0xE50031
	CASE "牡丹色"
		SETCOLOR 0xE100B2
	CASE "紅色"
		SETCOLOR 0xDB0015
	CASE "カーマイン"
		SETCOLOR 0xCC000A
	CASE "濃紅"
		SETCOLOR 0xB40926
	CASE "ワインレッド"
		SETCOLOR 0xA8002F


	CASE "ピンク","ピンク色"
		SETCOLOR 0xEF8F9C
	CASE "ローズピンク"
		SETCOLOR 0xEF7598
	CASE "桃色", "桃"
		SETCOLOR 0xEF7585
	CASE "桜色", "桜"
		SETCOLOR 0xFCEEEB
	CASE "サーモンピンク"
		SETCOLOR 0xFF9E8C

	CASE "暗紅色"
		SETCOLOR 0x890F65
	CASE "葡萄酒色" , "ワイン" , "ワインカラー" , "ワイン色"
		SETCOLOR 0x7B3746


	CASEELSE
		;지정이 없다면 GhostWite로 반환한다
		SETCOLOR 0xF8F8FF
ENDSELECT

;현재 문자색을 TEXTCOLOR_NOW에 대입
GETCOLOR
TEXTCOLOR_NOW=RESULT:0
;현재 배경색을 BGCOLOR_NOW에 대입
GETBGCOLOR
BGCOLOR_NOW=RESULT:0

;배경색과 글자색이 일치
IF TEXTCOLOR_NOW == BGCOLOR_NOW
	RESETCOLOR
	;휘도(輝度)로 산출 ((R*299)+(G*587)+ (B*144))/1000
	IF ((BGCOLOR_NOW/0x10000*299)+((BGCOLOR_NOW%0x10000)/0x100*587)+(BGCOLOR_NOW%0x100*144))/1000 > 127
		SETCOLOR 0x000000
	ELSE
		SETCOLOR 0xFFFFFF
	ENDIF
ENDIF

PRINTFORM %PRINT_CTEXT%


RESETCOLOR





