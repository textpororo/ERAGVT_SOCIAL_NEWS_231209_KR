@PRINT_RGBTEXT(ARGS:0,ARGS:1)
#DIMS PRINT_CTEXT
#DIM BGCOLOR_NOW
#DIM TEXTCOLOR_NOW

PRINT_CTEXT=%ARGS:1%

SELECTCASE ARGS:0
	;****************【HTML 3.0사양＆Windows표준 16색】****************
	;********************************
	CASE "빨강" , "레드" , "Red" , "RED" , "Ｒｅｄ" , "ＲＥＤ"
		SETCOLOR 0xFF0000
	CASE "밤색" , "적갈색" , "마룬" , "Maroon", "MAROON" , "Ｍａｒｏｏｎ" , ""
		SETCOLOR 0x800000
	CASE "올리브" , "올리브색" , "Olive" , "OLIVE"
		SETCOLOR 0x808000
	CASE "노랑" , "옐로우" , "Yellow" , "YELLOW" , "Ｙｅｌｌｏｗ" , "ＹＥＬＬＯＷ"
		SETCOLOR 0xFFFF00
	CASE "라임" , "Lime" , "LIME" , "Ｌｉｍｅ" , "ＬＩＭＥ"
		SETCOLOR 0x00FF00
	CASE "초록" , "그린"  , "Green" , "GREEN" , "Ｇｒｅｅｎ" , "ＧＲＥＥＮ"
		SETCOLOR 0x008000
	CASE "수색" , "아쿠아" , "Aqua" , "AQUA" , "Ａｑｕａ" , "ＡＱＵＡ"
		SETCOLOR 0x00FFFF
	CASE "오리깃빛" , "오리빛" ,"물오리색" , "Teal" , "TEAL" , "Ｔｅａｌ" , "ＴＥＡＬ"
		SETCOLOR 0x008080
	CASE "파랑" , "블루" , "Blue" , "BLUE"  , "Ｂｌｕｅ" , "ＢＬＵＥ"
		SETCOLOR 0x0000FF
	CASE "네이비" , "네이비색" , "감색" , "짙은 감색" , "네이비 블루" , "Navy" , "NAVY" , "Ｎａｖｙ" , "ＮＡＶＹ"
		SETCOLOR 0x008080
	CASE "적자색" , "마젠타" , "푸크시아" , "퓨시아" , "Fuchsia" , "FUCHSIA" , "Magenta" , "MAGENTA"
		SETCOLOR 0xFF00FF
	CASE "보라" ,  "퍼플" , "Purple" , "PURPLE" , "Ｐｕｒｐｌｅ" , "ＰＵＲＰＬＥ"
		SETCOLOR 0x800080
	CASE "투명" , "순백" , "화이트" , "White" , "WHITE" , "Ｗｈｉｔｅ" , "ＷＨＩＴＥ"
		SETCOLOR 0xFFFFFF
	CASE "회색" , "잿빛" , "그레이" , "Gray"
		SETCOLOR 0x808080
	CASE "Silver"
		SETCOLOR 0xC0C0C0
	CASE "검정" , "칠흑" , "순흑" , "진흑" , "블랙" , "Black" , "BLACK" ,"Ｂｌａｃｋ" , "ＢＬＡＣＫ"
		SETCOLOR 0x000000



	;****************【X11의 색 명칭】****************



	;****************【기타】****************
	CASE "장밋빛"
		SETCOLOR 0xFF0037
	CASE "주색"
		SETCOLOR 0xF80606
	CASE "로즈"
		SETCOLOR 0xFF0037
	CASE "딸기" , "イチゴ" , "いちご" , "苺" , "스트로베리"
		SETCOLOR 0xE50031
	CASE "모란색"
		SETCOLOR 0xE100B2
	CASE "홍색"
		SETCOLOR 0xDB0015
	CASE "양홍색"
		SETCOLOR 0xCC000A
	CASE "짙은 홍색"
		SETCOLOR 0xB40926
	CASE "암적색"
		SETCOLOR 0xA8002F


	CASE "핑크","핑크색"
		SETCOLOR 0xEF8F9C
	CASE "로즈 핑크"
		SETCOLOR 0xEF7598
	CASE "분홍색", "분홍"
		SETCOLOR 0xEF7585
	CASE "담홍색", "담홍"
		SETCOLOR 0xFCEEEB
	CASE "살몬 핑크"
		SETCOLOR 0xFF9E8C

	CASE "암홍색"
		SETCOLOR 0x890F65
	CASE "포도주색" , "와인" , "와인컬러" , "와인색"
		SETCOLOR 0x7B3746


	CASEELSE
		;지정이 없다면 GhostWite로 반환한다
		SETCOLOR 0xF8F8FF
ENDSELECT

;현재 문자색을 TEXTCOLOR_NOW에 대입
GETCOLOR
TEXTCOLOR_NOW=RESULT:0
;현재 배경색을 BGCOLOR_NOW에 대입
GETBGCOLOR
BGCOLOR_NOW=RESULT:0

;배경색과 글자색이 일치
IF TEXTCOLOR_NOW == BGCOLOR_NOW
	RESETCOLOR
	;휘도(輝度)로 산출 ((R*299)+(G*587)+ (B*144))/1000
	IF ((BGCOLOR_NOW/0x10000*299)+((BGCOLOR_NOW%0x10000)/0x100*587)+(BGCOLOR_NOW%0x100*144))/1000 > 127
		SETCOLOR 0x000000
	ELSE
		SETCOLOR 0xFFFFFF
	ENDIF
ENDIF

PRINTFORM %PRINT_CTEXT%


RESETCOLOR





