@SYUZOKU_CHECK, ARGS, ARG
FOR LOCAL, 201, 250
	IF TALENT:ARG:LOCAL > 0
		SELECTCASE ARGS
			CASE "STRING"
				RESULTS = %TALENTNAME:LOCAL%
				RETURN LOCAL
			CASE "PRINT"
				PRINTFORM %TALENTNAME:LOCAL%
				RETURN LOCAL
			CASE "GET_SYUZOKU_VALUE"
				RETURN LOCAL
		ENDSELECT
	ENDIF
NEXT
SELECTCASE ARGS
	CASE "STRING"
		RESULTS = ランダム
		RETURN 0
	CASE "PRINT"
		PRINTFORM ランダム
		RETURN 0
	CASE "GET_SYUZOKU_VALUE"
