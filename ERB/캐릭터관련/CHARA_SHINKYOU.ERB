;--------------------------------------------------
;キャラの心境に関する処理
;--------------------------------------------------
;心境による補正等
@SHINKYOU_CHECK, ARGS, ARG
IF TCVARn:1 == 0
	SELECTCASE ARGS
		CASE "PRINT"
			PRINT 普通
		CASE "PRINTSTATE"
			PRINT 普通（補正なし）
	ENDSELECT
	RETURN ARG
ELSEIF TCVARn:1 == 1
	SELECTCASE ARGS
		CASE "PRINT"
			PRINT 倒錯
		CASE "PRINTSTATE"
			PRINT 倒錯（攻・防・敏ダウン）
		CASE "KOUGEKI"
			TIMES ARG, 0.80
		CASE "BOUGYO"
			TIMES ARG, 0.80
		CASE "BINSYOU"
			TIMES ARG, 0.80
		CASE "CHISEI"
	ENDSELECT
	RETURN ARG
ELSEIF TCVARn:1 == 2
	SELECTCASE ARGS
		CASE "PRINT"
			PRINT 怒り
		CASE "PRINTSTATE"
			PRINT 怒り（공격・방어アップ）
		CASE "KOUGEKI"
			TIMES ARG, 1.20
		CASE "BOUGYO"
			TIMES ARG, 1.20
		CASE "BINSYOU"
		CASE "CHISEI"
			TIMES ARG, 0.80
	ENDSELECT
	RETURN ARG
ELSEIF TCVARn:1 == 3
	SELECTCASE ARGS
		CASE "PRINT"
			PRINT 諦観
		CASE "PRINTSTATE"
