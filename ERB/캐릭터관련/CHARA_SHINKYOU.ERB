;--------------------------------------------------
;心境変化のチェック

;--------------------------------------------------
;共通処理
@SHINKYOU_CHANGE, ARGS
LOCAL = 0
;心境強度の判定
SELECTCASE TCVARn:1
	;倒錯
	CASE 1
		SIF (MESSAGE_BRANCH_F(TARGET) & 타락)
			LOCAL += 1
		SIF (MESSAGE_BRANCH_F(TARGET) & 쾌락굴복)
			LOCAL += 2
		SIF (MESSAGE_BRANCH_F(TARGET) & 성저항)
			LOCAL += 1
		SIF TCVARn:11 < 1
			LOCAL = 20
	;怒り
	CASE 2
		SIF (MESSAGE_BRANCH_F(TARGET) & 고전) == 0
			LOCAL += 1
		SIF ARGS == "REISEI"
			LOCAL += 1
		SIF TCVARn:0 == 0
			LOCAL += 1
		SIF TCVARn:11 < 2
			LOCAL = 20
	;諦観
	CASE 3
		SIF (MESSAGE_BRANCH_F(TARGET) & 절망)
			LOCAL += 2
		SIF (MESSAGE_BRANCH_F(TARGET) & 고전)
			LOCAL += 1
		SIF ARGS != "TOUSAKU" && ARGS != "DOUYOU" && ARGS != "SYOUTIN"
			LOCAL += 1
		SIF TCVARn:0 == 0
			LOCAL += 2
		SIF TCVARn:11 < 1
			LOCAL = 20
	;冷静
	CASE 4
		SIF (MESSAGE_BRANCH_F(TARGET) & 절망)
			LOCAL += 2
		SIF (MESSAGE_BRANCH_F(TARGET) & 성저항) == 0
			LOCAL += 1
		SIF ARGS == "KOUYOU"
			LOCAL += 1
		SIF TCVARn:11 < 2
			LOCAL = 20
	;動揺
	CASE 5
		SIF (MESSAGE_BRANCH_F(TARGET) & 절망)
			LOCAL += 1
		SIF (MESSAGE_BRANCH_F(TARGET) & 고전)
			LOCAL += 1
		SIF TCVARn:0 == 0
			LOCAL += 2
		SIF TCVARn:11 < 1
			LOCAL = 20
	;高揚
	CASE 6
		SIF (MESSAGE_BRANCH_F(TARGET) & 고전) == 0
			LOCAL += 1
		SIF (MESSAGE_BRANCH_F(TARGET) & 성저항) == 0
			LOCAL += 1
		SIF TCVARn:11 < 2
			LOCAL = 20
		SIF TCVARn:0 == 0
			LOCAL = 0
	;消沈
	CASE 7
		SIF (MESSAGE_BRANCH_F(TARGET) & 절망)
			LOCAL += 1
		SIF (MESSAGE_BRANCH_F(TARGET) & 고전)
			LOCAL += 1
		SIF TCVARn:11 < 1
			LOCAL = 20
ENDSELECT
;心境強度に応じて心境が変わりにくくなる
SIF RAND:100 < LOCAL * 5
		RETURN 0

TRYCALLFORM SHINKYOU_CHANGE_%ARGS%

