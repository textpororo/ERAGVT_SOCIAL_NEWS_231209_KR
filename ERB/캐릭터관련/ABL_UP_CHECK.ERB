		SIF COUNT > 3
			LOCAL:0 += 6
		IF PALAM:(LOCAL:0) < 100
			LOCAL:1 = 0
		ELSEIF PALAM:(LOCAL:0) < 300
			LOCAL:1 = 1
		ELSEIF PALAM:(LOCAL:0) < 600
