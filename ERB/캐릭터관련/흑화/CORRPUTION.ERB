	CALL EXCHANGE_CSTR (ARG, 57, 12)
	CALL EXCHANGE_CSTR (ARG, 58, HAIRSTYLE)
ENDIF
;머리색
SIF GETBIT(CFLAG:ARG:80, 4) == 1 && CONFIG_CHECK_PRISON_F(6) == 1
	CALL EXCHANGE_CSTR (ARG, 51, HAIRCOLOR)
;눈색
