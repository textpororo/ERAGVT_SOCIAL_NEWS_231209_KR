@PRINT_SWOON
#FUNCTIONS
VARSET LOCALS
IF (TCVARn:12 & 기절)
	IF TALENT:주관시점 > 0
		SELECTCASE RAND:10
			CASE 9
				LOCALS = 気を失いかけている
			CASE 8
				LOCALS = 寝そべっている
			CASE 7
				LOCALS = 伏せっている
			CASE 6
				LOCALS = 倒れている
			CASE 5
				LOCALS = 기절しかけている
			CASE 4
				LOCALS = 気を失いかけた
			CASE 3
				LOCALS = 寝そべった
			CASE 2
				LOCALS = 地に伏せた
			CASE 1
				LOCALS = 倒れ込んだ
			CASE 0
				LOCALS = 朦朧とした意識の
		ENDSELECT
	ELSE
		SELECTCASE RAND:10
			CASE 9
				LOCALS = 気を失っている
			CASE 8
				LOCALS = 寝そべっている
			CASE 7
				LOCALS = 伏せっている
			CASE 6
				LOCALS = 倒れている
			CASE 5
				LOCALS = 기절している
			CASE 4
				LOCALS = 気を失った
			CASE 3
				LOCALS = 寝そべった
			CASE 2
				LOCALS = 地に伏せた
			CASE 1
				LOCALS = 倒れ込んだ
			CASE 0
				LOCALS = 기절した
		ENDSELECT
	ENDIF
ENDIF
RETURNF LOCALS




;--------------------------------------------------
;キャラクターの외관を加味した나이帯を返す式中関数
@GET_AGEBAND(ARG)
#FUNCTIONS
#DIM AGE

;プロフィール未設定のキャラは나이帯なし
LOCALS = なし
SIF CFLAG:ARG:34 == 0
	RETURNF LOCALS

IF CFLAG:ARG:1 > 0
	AGE = MAXBASE:ARG:나이
ELSE
	AGE = BASE:ARG:나이
ENDIF

IF AGE < 10
	LOCALS = 幼い
ELSEIF AGE < 16
	LOCALS = 子供
ELSEIF AGE < 25
	LOCALS = 若い
ELSE
	LOCALS = 大人
ENDIF

RETURNF LOCALS




