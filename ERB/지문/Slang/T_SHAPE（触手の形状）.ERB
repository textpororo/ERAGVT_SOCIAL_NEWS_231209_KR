;**********************************************************
;촉수の초기화
@T_SHAPE(ARGS:0,ARGS:1)
#DIMS TWORD
#FUNCTIONS


;ARGS:0の色指定チェック
STRLENFORM %ARGS:0%
SIF RESULT:0 == -1
	ARGS:0=%T_STATUS_BCOLOR(TARGET)%

;**********************************************************
;촉수の色の설정
SELECTCASE ARGS:0
	CASE "透明"
		TWORD=透き通った
	CASE "빨강"
		TWORD=真っ赤な
	CASE "담홍","담홍색"
		TWORD=淡い담홍색の
	CASE "분홍","분홍색"
		TWORD=艶やかな桃色の
	CASE "핑크","핑크색"
		TWORD=艶やかなピンク色の
	CASE "살몬 핑크"
		TWORD=鮮やかな살몬 핑크の
	CASEELSE
	TWORD=%ARGS:0%
ENDSELECT



;**********************************************************
;촉수の形状と動き
SELECTCASE ARGS:1
	;**************【】***************
	CASE "ブラシ"
		TWORD+="ブラシ状のうごめく촉수"
	CASE "繊毛"
		TWORD+="繊毛のうごめく촉수"
	CASE "筆"
		TWORD+="体液を塗りつける筆状の촉수"


	;**************【】***************
	CASE "内視鏡"
		TWORD+="内視鏡の様に奥まで透して見える촉수"
	CASE "カテーテル"
		TWORD+="カテーテルのような촉수"
	CASE "注射器"
		TWORD+="注射器の様な촉수"
	CASE "搾乳器" , "搾乳機"
		TWORD+="カップ状の촉수"
	CASE "イチジク浣腸"
		TWORD+="先がすぼまっているイチジクのような촉수"


	;**************【】***************
	CASE "針"
		TWORD+="針が先端に付いた촉수"
	CASE "トゲトゲ"
		TWORD+="トゲトゲした凹凸のある촉수"


	;**************【】***************
	CASE "吸盤"
		TWORD+="吸い付く吸盤촉수"
	CASE "猫舌","ネコ舌"
		TWORD+="ザラザラとした舌のような촉수"
	CASE "舌"
		TWORD+="舌のような平たく濡れた촉수"


	;**************【】***************
	CASE "イボイボ"
		TWORD+="凸凹なイボがたくさんついた촉수"
	CASE "巨根"
		TWORD+="血管が脈打つ太い촉수"


	;**************【】***************
	CASE "ツタ", "蔦"
		TWORD+="ツタの様な촉수"
	CASE "ヒモ", "ロープ", "紐"
		TWORD+="細い촉수がロープ状に捩じ束ねられた촉수"
	CASE "極細", "糸"
		TWORD+="糸状の極細の촉수"


	;**************【】***************
	CASEELSE
		TWORD+="촉수"


ENDSELECT



;**************【終了】***************

RETURNF TWORD




;**********************************************************
;촉수の체력で４段階、사정値で４段階の変色するシステム＊暫定
;Tentacle's STATUS make BodyCOLOR
;**********************************************************
@T_STATUS_BCOLOR(ARG)
#DIMS T_COLOR_SET
#FUNCTIONS

IF (FLAG:13 > FLAG:12 *3/4)
	IF (FLAG:15 > FLAG:14 *3/4)
		T_COLOR_SET=桃色
	ELSEIF (FLAG:15 > FLAG:14 *2/4)
		T_COLOR_SET=ピンク
	ELSEIF (FLAG:15 > FLAG:14 *1/4)
		T_COLOR_SET=담홍색
	ELSE
		T_COLOR_SET=살몬 핑크
	ENDIF
ELSEIF (FLAG:13 > FLAG:12 *2/4)
	IF (FLAG:15 > FLAG:14 *3/4)
		T_COLOR_SET=ピンク
	ELSEIF (FLAG:15 > FLAG:14 *2/4)
		T_COLOR_SET=ピンク
	ELSEIF (FLAG:15 > FLAG:14 *1/4)
		T_COLOR_SET=ピンク
	ELSE
		T_COLOR_SET=ピンク
	ENDIF
ELSEIF (FLAG:13 > FLAG:12 *1/4)
	IF (FLAG:15 > FLAG:14 *3/4)
		T_COLOR_SET=赤褐色
	ELSEIF (FLAG:15 > FLAG:14 *2/4)
		T_COLOR_SET=赤褐色
	ELSEIF (FLAG:15 > FLAG:14 *1/4)
			T_COLOR_SET=赤褐色
	ELSE
		T_COLOR_SET=赤褐色
	ENDIF
ELSEIF (FLAG:13 > FLAG:12 /10) && (FLAG:13 > 500) 
	IF (FLAG:15 > FLAG:14 *3/4)
		T_COLOR_SET=赤黒
	ELSEIF (FLAG:15 > FLAG:14 *2/4)
		T_COLOR_SET=赤紫
	ELSEIF (FLAG:15 > FLAG:14 *1/4)
		T_COLOR_SET=赤紫
	ELSE
		T_COLOR_SET=赤紫
	ENDIF
ELSE
	IF (FLAG:15 > FLAG:14 *3/4)
		T_COLOR_SET=赤紫
	ELSEIF (FLAG:15 > FLAG:14 *2/4)
		T_COLOR_SET=赤紫
	ELSEIF (FLAG:15 > FLAG:14 *1/4)
		T_COLOR_SET=赤紫
	ELSE
		T_COLOR_SET=赤紫
	ENDIF
ENDIF


RETURNF T_COLOR_SET



;**********************************************************
;T_SHAPE(ARGS:0,ARGS:1)の文字を着色してPRINTFORMする
;**********************************************************
@COLOR_T_SHAPE(ARGS:0,ARGS:1)
#DIMS COLORPRINT_CSET
#DIMS COLORPRINT_TEXT


;초기화
COLORPRINT_CSET=%ARGS:0%

STRLENFORM %COLORPRINT_CSET%

IF RESULT:0 > 0
	COLORPRINT_TEXT=%T_SHAPE(COLORPRINT_CSET,ARGS:1)%
ELSE
	COLORPRINT_CSET=%T_STATUS_BCOLOR(TARGET)%
	COLORPRINT_TEXT=%T_SHAPE(COLORPRINT_CSET,ARGS:1)%
ENDIF

;PRINTFORM形式で호출
CALL PRINT_RGBTEXT(COLORPRINT_CSET,COLORPRINT_TEXT)


