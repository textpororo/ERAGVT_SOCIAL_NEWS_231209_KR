;eXample(例)の淫語
@SLANG_LabiaMinora(ARG)
#DIMS SLANGWORD_LabiaMinora
#FUNCTIONS

;初期化
SLANGWORD_LabiaMinora=
;第一形容詞：状況（汁気）
;STAIN:0;口 || STAIN:3:膣、ワレメ || STAIN:4:애널
IF (STAIN:3 & 4)
	SLANGWORD_LabiaMinora = %SLANGWORD_LabiaMinora%%SLANG_SEMEN(TARGET)%
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_LabiaMinora += "で穢された"
		CASEELSE
			SLANGWORD_LabiaMinora += "が濡れ落ちる"
	ENDSELECT
ENDIF



;第二形容詞：形状表現


;第三形容詞：動作表現
IF TALENT:음란 > 0
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_LabiaMinora += "期待に開いている"
		CASEELSE
			SLANGWORD_LabiaMinora += "興奮に開いている"
	ENDSELECT
ENDIF

;部位呼称
IF TALENT:음란 > 0
	SLANGWORD_LabiaMinora += "媚肉の二枚貝"
ELSE
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_LabiaMinora += "小陰唇"
		CASEELSE
			SLANGWORD_LabiaMinora += "ビラビラ"
	ENDSELECT
ENDIF


;合成して出来上がった淫語を返す
RETURNF SLANGWORD_LabiaMinora





