;**********************************************************
;Nipple(ニップル)の淫語
;**********************************************************
@SLANG_N(ARG)
#DIMS SLANGWORD_N
#FUNCTIONS

;初期化
SLANGWORD_N=

;第一形容詞：状況（汁など）
IF (STAIN:2 & 4)
	SLANGWORD_N+="精液を塗られた"
ENDIF

;第二形容詞：形状表現


;第三形容詞：動作表現
IF TALENT:음유
	SLANGWORD_N += "快楽にそそり勃つ"
ENDIF

;部位呼称
IF TALENT:음유
	SLANGWORD_N += "乳芽"
ELSE
	SELECTCASE RAND:5
		CASE 4
			SLANGWORD_N += "乳頭"
		CASE 3
			SLANGWORD_N += "胸の先端"
		CASE 2
			SLANGWORD_N += "乳先"
		CASE 1
			SLANGWORD_N += "乳首"
		CASEELSE
			SLANGWORD_N += "ニップル"
	ENDSELECT
ENDIF

RETURNF SLANGWORD_N


