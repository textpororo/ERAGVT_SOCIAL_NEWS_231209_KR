;Hip(尻)の淫語
;**********************************************************
@SLANG_H(ARG)
#DIMS SLANGWORD_H
#FUNCTIONS

;초기화
SLANGWORD_H=

;第一形容詞：状況（汁など）
IF (STAIN:4 & 4)
	SLANGWORD_H = %SLANGWORD_H%%SLANG_SEMEN(TARGET)%がぶっかけられている
ENDIF

;第二形容詞：形状表現
;순산형
IF TALENT:812 == 1
	SLANGWORD_H += "どっしりとしている"
;포동포동
ELSEIF TALENT:812 == 2
	SLANGWORD_H += "포동포동している"
;유아배
ELSEIF TALENT:812 == 3
	SLANGWORD_H += "ぷりぷりしている"
;날씬함
ELSEIF TALENT:812 == 4
	SLANGWORD_H += "肉付きの薄い"
;빵뎅이
ELSEIF TALENT:812 == 5
	SLANGWORD_H += "むっちりしている"
;왕뎅이
ELSEIF TALENT:812 == 6
	SLANGWORD_H += "むにゅっとした肉付きの"
ENDIF


;第三形容詞：動作表現


;部位呼称
IF TALENT:음고>0
	SLANGWORD_H += "음고"
ELSEIF TALENT:음란>0
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_H += "りんご尻"
		CASE 1
			SLANGWORD_H += "桃尻"
		CASEELSE
			SLANGWORD_H += "尻鞠"
	ENDSELECT
ELSE
	SELECTCASE RAND:3
		CASE 3
			SLANGWORD_H += "尻の谷間"
		CASE 2
			SLANGWORD_H += "힙"
		CASE 1
			SLANGWORD_H += "尻肉"
		CASEELSE
			SLANGWORD_H += "엉덩이"
	ENDSELECT
ENDIF

RETURNF SLANGWORD_H


