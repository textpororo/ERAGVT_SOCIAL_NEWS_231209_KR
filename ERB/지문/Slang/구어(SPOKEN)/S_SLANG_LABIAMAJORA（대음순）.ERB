;LabiaMajora(大陰唇)의 음어(淫語)
@S_SLANG_LabiaMajora(ARG)
#DIMS S_SLANGWORD_LabiaMajora
#FUNCTIONS

;초기화
S_SLANGWORD_LabiaMajora =

;제1형용사：상황（즙에 젖어있다 등등）
;STAIN:3: 질, 균열
IF (STAIN:3 & 4)
	S_SLANGWORD_LabiaMajora = %S_SLANGWORD_LabiaMajora% %S_SLANG_SEMEN(TARGET)%
	SELECTCASE RAND:2
		CASE 1
			S_SLANGWORD_LabiaMajora += 조사만처리(S_SLANG_SEMEN(TARGET),"로") + " 더럽혀져 있는"
		CASEELSE
			S_SLANGWORD_LabiaMajora += "에 젖어 뚝뚝 떨어지고 있는"
	ENDSELECT
	
	;제1형용사 뒤에 띄어쓰기 추가
	S_SLANGWORD_LabiaMajora += " "
ENDIF


;제2형용사：형태 표현
;순산형
;원문은 プリプリしている
IF TALENT:812 == 1
	S_SLANGWORD_LabiaMajora += "쭉쭉빵빵한"
;포동포동
;원문은 ムチムチしている
ELSEIF TALENT:812 == 2
	S_SLANGWORD_LabiaMajora += "포동포동한"
;유아배
;원문은 プニっとしている
ELSEIF TALENT:812 == 3
	S_SLANGWORD_LabiaMajora += "뽀잉뽀잉한"
;날씬함
;원문은 スラッとしている
ELSEIF TALENT:812 == 4
	S_SLANGWORD_LabiaMajora += "늘씬한"
;빵뎅이
;원문은 ムチッとしている
ELSEIF TALENT:812 == 5
	S_SLANGWORD_LabiaMajora += "탱탱한"
;왕뎅이
;원문은 ムニッとしている
ELSEIF TALENT:812 == 6
	S_SLANGWORD_LabiaMajora += "몰캉몰캉한"
ENDIF

;제2형용사 뒤에 띄어쓰기 추가
SIF TALENT:812 > 0
	S_SLANGWORD_LabiaMajora += " "

;제3형용사：동작 표현
IF TALENT:음란 > 0
	SELECTCASE RAND:2
		;원문은 期待で開く
		CASE 1
			S_SLANGWORD_LabiaMajora += "기대하는 듯 벌려진"
		;원문은 興奮で開く
		CASEELSE
			S_SLANGWORD_LabiaMajora += "흥분으로 벌려진"
	ENDSELECT
	
	;제3형용사 뒤에 띄어쓰기 추가
	S_SLANGWORD_LabiaMajora += " "
ENDIF



;부위 호칭
IF TALENT:음란 > 0
	SELECTCASE RAND:3
		CASE 2
			S_SLANGWORD_LabiaMajora += "음란한 틈새"
		CASE 1
			S_SLANGWORD_LabiaMajora += "음란한 골짜기"
		;원문은 淫裂
		CASEELSE
			S_SLANGWORD_LabiaMajora += "음란한 균열"
	ENDSELECT
ELSE
	SELECTCASE RAND:4
		CASE 3
			S_SLANGWORD_LabiaMajora += "대음순"
		;원문은 陰裂
		CASE 2
			S_SLANGWORD_LabiaMajora += "음렬"
		CASE 1
			S_SLANGWORD_LabiaMajora += "균열"
		;원문은 縦筋
		CASEELSE
			S_SLANGWORD_LabiaMajora += "일자 균열"
	ENDSELECT
ENDIF


;합성하여 완성된 음어를 반환한다
RETURNF S_SLANGWORD_LabiaMajora





