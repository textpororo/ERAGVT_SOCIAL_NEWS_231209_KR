;--------------------------------
@LASTBOSS_REST
IF CONFIG_CHECK_BALANCE_F(5) > 0 && ENEMY_TYPE_CHECK_F("LASTBOSS") >= 1
	LOCAL = 8
ELSE
	LOCAL = 0
ENDIF
RETURN LOCAL
