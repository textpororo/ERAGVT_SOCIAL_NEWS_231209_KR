@MAJORITY_VOTING_PROBABILITY_NUM ,ARG:0 ,ARG:1
;ARG:0	試行回数
;ARG:1	確率(N / 256)

$SAME_RESULT

LOCAL:0 = 0
LOCAL:1 = 0
REPEAT ARG:0
	IF RAND:256 < ARG:1
		LOCAL:0 += 1
	ELSE
		LOCAL:1 += 1
	ENDIF
REND

IF LOCAL:0 == LOCAL:1
	GOTO SAME_RESULT
ELSEIF LOCAL:0 > LOCAL:1
	RETURN ARG:0
ELSE
	RETURN 0
ENDIF



