@ATTACK_PLACE_DECISION
#DIM CHISEI_CAL
#DIM CCOUNT
;촉수/敵の공격箇所を決定

$SELECT_LOOP
;行動ごとに次ターンの공격箇所を決定
IF TFLAG:10 == 1
	IF RAND:2 == 0
		TFLAG:11 |= 1
	ELSE
		IF TALENT:근거리특기 && RAND:3 == 0
			TFLAG:11 |= 1
		ENDIF
	ENDIF

	IF RAND:2 == 0
		TFLAG:11 |= 2
	ELSE
		IF TALENT:중거리특기 && RAND:3 == 0
			TFLAG:11 |= 2
		ENDIF
	ENDIF

	IF RAND:2 == 0
		TFLAG:11 |= 4
	ELSE
		IF TALENT:원거리특기 && RAND:3 == 0
			TFLAG:11 |= 4
		ENDIF
	ENDIF
	IF RAND:10 == 0
		TFLAG:11 |= 8
	ELSE
		IF TALENT:공중전특기 && RAND:8 == 0
			TFLAG:11 |= 8
		ENDIF
	ENDIF
ELSEIF FLAG:73 > 0
	TFLAG:11 |= 1
	SIF RAND:4 == 0
		TFLAG:11 |= 2
ELSEIF TFLAG:10 == 2 || TFLAG:10 == 5
	SIF RAND:4 == 0
		TFLAG:11 |= 1
	SIF RAND:4 == 0
		TFLAG:11 |= 2
	SIF RAND:4 == 0
		TFLAG:11 |= 4
	SIF RAND:10 == 0
		TFLAG:11 |= 8
ELSEIF TFLAG:10 == 3
	SIF RAND:3 != 0
		TFLAG:11 |= 1
	SIF RAND:4 != 0
		TFLAG:11 |= 2
	SIF RAND:5 != 0
		TFLAG:11 |= 4
	SIF RAND:10 == 0
		TFLAG:11 |= 8
ELSEIF TFLAG:10 == 6
	SIF RAND:5 != 0
		TFLAG:11 |= 1
	SIF RAND:4 != 0
		TFLAG:11 |= 2
	SIF RAND:3 != 0
		TFLAG:11 |= 4
	SIF RAND:10 == 0
		TFLAG:11 |= 8
ELSE
ENDIF

;아무것도안한다場合は絶対に捕まる
IF TCVARn:0 == 1 && TCVARn:2 == 자세：아무것도안한다
	TFLAG:11 |= 1
ELSEIF TCVARn:0 == 2 && TCVARn:2 == 자세：아무것도안한다
	TFLAG:11 |= 2
ELSEIF TCVARn:0 == 3 && TCVARn:2 == 자세：아무것도안한다
	TFLAG:11 |= 4
ELSEIF GETBIT(TCVARn:216, 1) && TCVARn:2 == 자세：아무것도안한다
	TFLAG:11 |= 8
ENDIF
;기절・쓰러짐中は正確に狙われるオプション
IF CONFIG_CHECK_BALANCE_F(8) && ((TCVARn:12 & 기절) || (TCVARn:12 & 쓰러짐))
	SIF TCVARn:0 == 1
		TFLAG:11 |= 1
	SIF TCVARn:0 == 2
		TFLAG:11 |= 2
	SIF TCVARn:0 == 3
		TFLAG:11 |= 4
ENDIF


;공격箇所の数を算出
SIF (TFLAG:11 & 1) == 1
	TFLAG:12 ++
SIF (TFLAG:11 & 2) == 2
	TFLAG:12 ++
SIF (TFLAG:11 & 4) == 4
	TFLAG:12 ++
;공격箇所が設定されていないならループで再設定を行う
SIF TFLAG:12 == 0 && TFLAG:10 != 4
	GOTO SELECT_LOOP

;対空공격の設定
;악질 시민は対空を行わない
IF FLAG:11 == 1150
ELSEIF TFLAG:10 == 1
	IF RAND:4 == 0
		TFLAG:11 |= 8
	ELSE
		IF TALENT:공중전특기 && RAND:4 == 0
			TFLAG:11 |= 8
		ENDIF
	ENDIF
ELSEIF TFLAG:10 == 2 || TFLAG:10 == 5
	SIF RAND:5 == 0
		TFLAG:11 |= 8
ELSEIF TFLAG:10 == 3
	SIF RAND:3 != 0
		TFLAG:11 |= 8
ELSEIF TFLAG:10 == 6
	SIF RAND:5 == 0
		TFLAG:11 |= 8
ELSE
ENDIF
;空中に居ない場合、50%の確率で対空範囲を除外
SIF GETBIT(TCVARn:216, 1) == 0 && RAND:2 == 0
	CLEARBIT TFLAG:11, 3
;全体공격の場合、75%の確率で対空範囲を除外
SIF TFLAG:12 == 3 && RAND:4 != 0
	CLEARBIT TFLAG:11, 3

;予測成否判定
LOCAL:0 = MAXBASE:지성

;관찰한다による予測精度上昇効果
SIF TFLAG:25 > 0
	LOCAL:0 = LOCAL:0 * 3 / 2 + 25

;관찰한다効果のリセット
TFLAG:25 = 0

;기력による補正
CALL PERCENT_CAL, BASE:기력 * 2, MAXBASE:기력
IF RESULT < 100
	LOCAL:0 = LOCAL:0 * (RESULT + 300) /400
ENDIF

;衣装による補正
CALL CLOTH_BATTLE_HOSEI, "CHISEI"
LOCAL:0 = LOCAL:0 * RESULT / 100

;心境による補正
CALL SHINKYOU_CHECK, "CHISEI", LOCAL:0
LOCAL:0 = RESULT

;전투 지원による補正
CALL CALC_CHISEI_SHIEN(0)
LOCAL:0 += RESULT

;보스 촉수/敵キャラの지성
IF ENEMY_TYPE_CHECK_F("AKUOTI")
	LOCAL:1 = MAXBASE:(FLAG:111):지성
ELSE
	CALL TENTACLE_ACCESS, "CHISEI"
	LOCAL:1 = RESULT
ENDIF
LOCAL:2 = LOCAL:0 + LOCAL:1
LOCAL:3 = 160 * LOCAL:0 / LOCAL:2 + 96

IF FLAG:999 == 1
	PRINTFORML PC지성：{LOCAL:0}({MAXBASE:지성})
	PRINTFORML 敵지성：{LOCAL:1}
	PRINTFORML {LOCAL:3} / 256（{100 * LOCAL:3 / 256}％）    ファンブル値{(256 - LOCAL:3) / 4}（{(256 - LOCAL:3) * 25 / 256}％）
ENDIF

;ファンブル
IF RAND:256 < (256 - LOCAL:3) / 4 && SELECTCOM != 7 && (GETBIT(TCVARn:217, 0) == 0 || FSTYLE_NAME_F(TARGET,TCVARn:0) != "知略")
	SIF FLAG:999 == 1
		PRINTFORML 予測ファンブル！
	TCVARn:30 = -1
	TCVARn:31 = -1
	TCVARn:32 = -1
ENDIF
;予測数値決定
FOR LOCAL:5, 0, 3
	IF RAND:256 < LOCAL:3
		CALL INT_EVAL, LOCAL:0, LOCAL:1
		CALL INVERSION_PROBABILITY, GETBIT(TFLAG:11, LOCAL:5), RESULT
		TCVARn:(LOCAL:5 + 30) = RESULT
	ELSE
		TCVARn:(LOCAL:5 + 30) = -1
	ENDIF
NEXT
;空中の予測は別枠
IF RAND:256 < LOCAL:3
	CALL INT_EVAL, LOCAL:0 * 2, LOCAL:1
	CALL INVERSION_PROBABILITY, GETBIT(TFLAG:11, 3), RESULT
	TCVARn:33 = RESULT
ELSE
	TCVARn:33 = -1
ENDIF
