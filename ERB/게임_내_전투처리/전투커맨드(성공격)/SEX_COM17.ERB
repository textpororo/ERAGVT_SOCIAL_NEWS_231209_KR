;애널ピストン（Ａ挿入系統からの派生限定行動）

;性コマンド分類
@SEX_TYPE_COM17
RETURN 삽입

@SEX_COM17,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

INSERT |= 애널
;状態異常：강구속
SIF (TCVARn:12 & 강구속) == 0
	CALL STATE_CHANGE_PKOUSOKU, 100

;성기 가리개が残っている場合はＶ追加攻め플래그를折る
SIF CFLAG:42 == 398 && CLOTH_INNER_PER > 0 && (EX_COM & 질)
	EX_COM -= 질
;애널プレイはＶ挿入しない場合
SIF CONFIG_CHECK_OTHER_F(4) > 0 && (EX_COM & 질)
	EX_COM -= 질

;청순파なら１度だけ自動でＶ방어
SIF TALENT:청순파 > 0 && TCVARn:2 != 100 && (EX_COM & 질)
	CALL AUTO_V_DEFENCE, TARGET

;흑화 캐릭터のペニス位置をセット
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && (ISPENIS(FLAG:111))
	TFLAG:18 = 애널

;取得パラメータ計算
;ベース値の明示的초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度 상승
TFLAG:3 += 5

;사정値 550
CALL TENTACLE_SYASEI_UP, 550

;촉수サイズの설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 17

;快A　감각が低いうちは少なめ
IF CONFIG_CHECK_BALANCE_F(7) == 0
	IF ABL:A감각 == 0
		LOCAL:2 = 8
	ELSEIF ABL:A감각 == 1
		LOCAL:2 = 50
	ELSEIF ABL:A감각 == 2
		LOCAL:2 = 200
	ELSEIF ABL:A감각 == 3
		LOCAL:2 = 400
	ELSEIF ABL:A감각 == 4
		LOCAL:2 = 1000
	ELSEIF ABL:A감각 >= 5
		LOCAL:2 = 2000
	ENDIF
;컨피그オンで쾌A増加
ELSEIF CONFIG_CHECK_BALANCE_F(7) > 0
	IF ABL:A감각 == 0
		LOCAL:2 = 40
	ELSEIF ABL:A감각 == 1
		LOCAL:2 = 100
	ELSEIF ABL:A감각 == 2
		LOCAL:2 = 200
	ELSEIF ABL:A감각 == 3
		LOCAL:2 = 400
	ELSEIF ABL:A감각 == 4
		LOCAL:2 = 1000
	ELSEIF ABL:A감각 >= 5
		LOCAL:2 = 2000
	ENDIF
ENDIF
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,2,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM17, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 操作キャラに애널ピストンをした
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM17
	;지문: COM17
	CALL MESSAGE_SEX_COM17, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 2

;ベース
EXP:A경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:근친교배경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:근친교배경험 += 1


;공순
IF ABL:순종 <= 2
	LOCAL:5 = 20
ELSEIF ABL:순종 == 3
	LOCAL:5 = 50
ELSEIF ABL:순종 == 4
	LOCAL:5 = 100
ELSEIF ABL:순종 >= 5
	LOCAL:5 = 200
ENDIF

;습득
IF ABL:봉사정신 == 0
	LOCAL:6 = 10
ELSEIF ABL:봉사정신 == 1
	LOCAL:6 = 25
ELSEIF ABL:봉사정신 == 2
	LOCAL:6 = 50
ELSEIF ABL:봉사정신 == 3
	LOCAL:6 = 100
ELSEIF ABL:봉사정신 == 4
	LOCAL:6 = 250
ELSEIF ABL:봉사정신 >= 5
	LOCAL:6 = 500
ENDIF

;굴복　A감각に応じて
IF ABL:A감각 == 0
	LOCAL:8 = 20
ELSEIF ABL:A감각 == 1
	LOCAL:8 = 40
ELSEIF ABL:A감각 == 2
	LOCAL:8 = 100
ELSEIF ABL:A감각 == 3
	LOCAL:8 = 200
ELSEIF ABL:A감각 == 4
	LOCAL:8 = 400
ELSEIF ABL:A감각 >= 5
	LOCAL:8 = 900 + ABL:A감각 * 20
ENDIF

;윤활が低いと고통が入る
IF PALAM:윤활 < 1000
	LOCAL:10 += 1000
ELSEIF PALAM:윤활 < 2000
	LOCAL:10 += 200
ENDIF

;A감각が低いと공포が入る
IF ABL:A감각 == 0
	LOCAL:11 = 200
ELSEIF ABL:A감각 == 1
	LOCAL:11 = 100
ELSEIF ABL:A감각 == 2
	LOCAL:11 = 50
ELSEIF ABL:A감각 == 3
	LOCAL:11 = 20
ELSE
ENDIF

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ａ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;대량사정可能ならフィニッシュに移行
IF FLAG:15 >= FLAG:14 * 2
	TFLAG:17 = 18
;Ｖ追加責めが立っていれば両穴ピストンに移行
ELSEIF (EX_COM & Ｖ) && FLAG:15 >= FLAG:14 && BASE:V결계내구력 == 0 && TCVARn:2 != 자세：Ｖ방어 && (ENEMY_TYPE_CHECK_F("MOB") == 0 && ENEMY_TYPE_CHECK_F("CITIZEN") == 0) && ISFEMALE()
	TFLAG:17 = 19
;それ以外なら애널ピストン続行
ELSE
	TFLAG:17 = 17
ENDIF
;촉수の行動を記録
TFLAG:20 = 17

;습득基本値
LOCAL:6 += 200

;욕정基本値
LOCAL:7 += 100

;굴복基本値
LOCAL:8 += 400

;치정基本値
LOCAL:9 += 200

;고통基本値
LOCAL:10 += 100

;공포基本値
LOCAL:11 += 50

;체력消費基本値
LOCAL:12 += 1

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
