;C攻め強

;性コマンド分類
@SEX_TYPE_COM1
RETURN 통상

@SEX_COM1,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｃ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度 상승
TFLAG:3 += 25

;사정値 50
CALL TENTACLE_SYASEI_UP, 50

;촉수サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1

;快C
IF ABL:C감각 == 0
	LOCAL:0 = 800
ELSEIF ABL:C감각 == 1
	LOCAL:0 = 1500
ELSEIF ABL:C감각 == 2
	LOCAL:0 = 3500
ELSEIF ABL:C감각 == 3
	LOCAL:0 = 6000
ELSEIF ABL:C감각 == 4
	LOCAL:0 = 10000
ELSEIF ABL:C감각 >= 5
	LOCAL:0 = 20000
ENDIF
;ペニス持ちには効果大
SIF ISMANLY() || TALENT:후타나리 > 0
	LOCAL:0 += 1000
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,0,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM1, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 操作キャラにC攻め強をした
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM1
	;지문: COM1
	CALL MESSAGE_SEX_COM1, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 8

;ベース


;C감각が低くて윤활が低いと고통が少し入る
SIF ABL:C감각 < 3 && PALAM:윤활 < 1000
	LOCAL:10 = 200

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｃ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 1

;습득基本値
LOCAL:6 += 1000

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 1000

;치정基本値
LOCAL:9 += 50

;고통基本値
LOCAL:10 += 100

;공포基本値
LOCAL:11 += 50

;체력消費基本値
LOCAL:12 += 100

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
