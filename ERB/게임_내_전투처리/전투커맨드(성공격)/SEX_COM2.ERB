;V攻め弱

;性コマンド分類
@SEX_TYPE_COM2
RETURN 통상

@SEX_COM2,ARG = 0, ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｖ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度 상승
TFLAG:3 += 25

;사정値 50
CALL TENTACLE_SYASEI_UP, 50

;촉수サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 2


;快V
IF ABL:V감각 == 0
	LOCAL:1 = 500
ELSEIF ABL:V감각 == 1
	LOCAL:1 = 1000
ELSEIF ABL:V감각 == 2
	LOCAL:1 = 2000
ELSEIF ABL:V감각 == 3
	LOCAL:1 = 4000
ELSEIF ABL:V감각 == 4
	LOCAL:1 = 6000
ELSEIF ABL:V감각 >= 5
	LOCAL:1 = 8000
ENDIF
;Ｖ방어効果
SIF TCVARn:2 == 자세：Ｖ방어
	LOCAL:1 /= 4
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,1,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM2, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 操作キャラにV攻め弱をした
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM2
	;지문: COM2
	CALL MESSAGE_SEX_COM2, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 4

;ベース
SIF EX_COM & Ｖ
	EXP:V경험 += 1


;V감각が低くて윤활が低いと고통が入る
SIF ABL:V감각 < 3 && PALAM:윤활 < 2000 && BASE:V결계내구력 <= 0
	LOCAL:10 = 100

;윤활が入る
LOCAL:4 = 200

;처녀だと공포が少し入る
IF TALENT:처녀 > 0
	IF ABL:V감각 == 0
		LOCAL:11 = 200
	ELSEIF ABL:V감각 == 1
		LOCAL:11 = 100
	ELSEIF ABL:V감각 == 2
		LOCAL:11 = 20
	ELSE
	ENDIF
ENDIF
SIF BASE:V결계내구력 > 0
	LOCAL:11 /= 2

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｖ, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;次のターン、確率で挿入しようとする
IF RAND:2 == 0 && ISFEMALE()
	TFLAG:17 = 3
ELSE
	;行動予約なし
	TFLAG:17 = -1
ENDIF
;촉수の行動を記録
TFLAG:20 = 2

;습득基本値
LOCAL:6 += 0

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 100

;고통基本値
LOCAL:10 += 50

;공포基本値
LOCAL:11 += 0

;체력消費基本値
LOCAL:12 += 50

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
