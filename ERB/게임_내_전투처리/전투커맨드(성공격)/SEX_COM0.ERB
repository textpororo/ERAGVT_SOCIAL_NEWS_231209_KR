;C공격(약)
;LOCAL:0 쾌Ｃ
;LOCAL:1 쾌Ｖ
;LOCAL:2 쾌Ａ
;LOCAL:3 쾌Ｂ
;LOCAL:4 윤활
;LOCAL:5 공순
;LOCAL:6 습득
;LOCAL:7 욕정
;LOCAL:8 굴복
;LOCAL:9 치정
;LOCAL:10 고통
;LOCAL:11 공포

;性コマンド分類
@SEX_TYPE_COM0
RETURN 통상

@SEX_COM0,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｃ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 25

;사정値 50
CALL TENTACLE_SYASEI_UP, 50

;촉수サイズの설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 0

;快C
IF ABL:Ｃ감각 == 0
	LOCAL:0 = 500
ELSEIF ABL:Ｃ감각 == 1
	LOCAL:0 = 1000
ELSEIF ABL:Ｃ감각 == 2
	LOCAL:0 = 2000
ELSEIF ABL:Ｃ감각 == 3
	LOCAL:0 = 4000
ELSEIF ABL:Ｃ감각 == 4
	LOCAL:0 = 6000
ELSEIF ABL:Ｃ감각 >= 5
	LOCAL:0 = 8000
ENDIF
;ペニス持ちには効果大
SIF ISMANLY() || TALENT:후타나리 > 0
	LOCAL:0 += 500
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,0,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM0, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 C공격(약)을 했다
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM0
	;지문: COM0
	CALL MESSAGE_SEX_COM0, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL

;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 4

;ベース


;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｃ, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 0

;습득基本値
LOCAL:6 += 0

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 50

;고통基本値
LOCAL:10 += 0

;공포基本値
LOCAL:11 += 0

;체력消費基本値
LOCAL:12 += 50

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
