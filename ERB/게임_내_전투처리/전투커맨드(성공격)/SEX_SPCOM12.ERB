;배꼽 쾌락 공격

;성 커맨드 분류
@SEX_TYPE_COM1012
RETURN 통상

@SEX_SPCOM12
;취득 파라미터 계산
;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 100

;사정치 100
CALL TENTACLE_SYASEI_UP, 100

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1012

;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,-1)


;지문: SPCOM12
CALL MESSAGE_SEX_SPCOM12

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 5

;BASE
;굴복　마조끼로 변화
IF ABL:마조끼 == 0
	LOCAL:8 = 2000
ELSEIF ABL:마조끼 == 1
	LOCAL:8 = 4000
ELSEIF ABL:마조끼 == 2
	LOCAL:8 = 6000
ELSEIF ABL:마조끼 == 3
	LOCAL:8 = 8000
ELSEIF ABL:마조끼 == 4
	LOCAL:8 = 16000
ELSEIF ABL:마조끼 >= 5
	LOCAL:8 = 24000
ENDIF

;공포　대충 순종과 마조끼로
IF ABL:순종 < 4
	IF ABL:마조끼 < 4
		LOCAL:11 = 20000
	ELSE
		LOCAL:11 = 2000
	ENDIF
ELSE
	IF ABL:마조끼 < 4
		LOCAL:11 = 2000
	ELSE
		LOCAL:11 = 200
	ENDIF
ENDIF

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 1012

;습득 기본값
LOCAL:6 += 0

;욕정 기본값
LOCAL:7 += 10000

;굴복 기본값
LOCAL:8 += 5000

;치정 기본값
LOCAL:9 += 0

;고통 기본값
LOCAL:10 += 0

;공포 기본값
LOCAL:11 += 2000

;체력 소비 기본값
LOCAL:12 += 1050

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
