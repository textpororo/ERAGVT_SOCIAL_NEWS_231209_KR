;B攻め強 CVA弱を追加

;性コマンド分類
@SEX_TYPE_COM7
RETURN 통상

@SEX_COM7,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｂ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 50

;사정値 50
CALL TENTACLE_SYASEI_UP, 50

;촉수サイズの설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 7

;ベース
;快B
IF ABL:Ｂ감각 == 0
	LOCAL:3 = 400
ELSEIF ABL:Ｂ감각 == 1
	LOCAL:3 = 1000
ELSEIF ABL:Ｂ감각 == 2
	LOCAL:3 = 2000
ELSEIF ABL:Ｂ감각 == 3
	LOCAL:3 = 4000
ELSEIF ABL:Ｂ감각 == 4
	LOCAL:3 = 10000
ELSEIF ABL:Ｂ감각 >= 5
	LOCAL:3 = 20000
ENDIF
;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｂ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,3,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM7, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 操作キャラにB攻め強をした
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM7
	;지문: COM7
	CALL MESSAGE_SEX_COM7, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 8


;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 7

;습득基本値
LOCAL:6 += 2500

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 1000

;치정基本値
LOCAL:9 += 200

;고통基本値
LOCAL:10 += 800

;공포基本値
LOCAL:11 += 100

;체력消費基本値
LOCAL:12 += 100

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
