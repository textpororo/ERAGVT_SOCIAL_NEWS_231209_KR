;수치 플레이

;성 커맨드 분류
@SEX_TYPE_COM1007
RETURN 통상

@SEX_SPCOM7
;취득 파라미터 계산

;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 50

;사정치 100
CALL TENTACLE_SYASEI_UP, 100

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1007

;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,-1)


;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 수치 플레이를 시켰다
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_SEX_SPCOM7
	
;지문: SPCOM7
CALL MESSAGE_SEX_SPCOM7

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 4

;BASE
EXP:노출쾌락경험 += 1

;욕정　노출벽이 높아질 수록 더 많아진다
IF ABL:노출벽 == 0
	LOCAL:7 = 50
ELSEIF ABL:노출벽 == 1
	LOCAL:7 = 100
ELSEIF ABL:노출벽 == 2
	LOCAL:7 = 200
ELSEIF ABL:노출벽 == 3
	LOCAL:7 = 500
ELSEIF ABL:노출벽 == 4
	LOCAL:7 = 1000
ELSEIF ABL:노출벽 >= 5
	LOCAL:7 = 2000
ENDIF

;치정　노출벽이 높아질 수록 더 많아진다
IF ABL:노출벽 == 0
	LOCAL:9 = 2000
ELSEIF ABL:노출벽 == 1
	LOCAL:9 = 2500
ELSEIF ABL:노출벽 == 2
	LOCAL:9 = 3500
ELSEIF ABL:노출벽 == 3
	LOCAL:9 = 4500
ELSEIF ABL:노출벽 == 4
	LOCAL:9 = 5000
ELSEIF ABL:노출벽 >= 5
	LOCAL:9 = 5500
ENDIF

;공포　노출벽이 높아질 수록 적어진다
IF ABL:노출벽 == 0
	LOCAL:11 = 2000
ELSEIF ABL:노출벽 == 1
	LOCAL:11 = 1000
ELSEIF ABL:노출벽 == 2
	LOCAL:11 = 500
ELSEIF ABL:노출벽 == 3
	LOCAL:11 = 200
ELSEIF ABL:노출벽 == 4
	LOCAL:11 = 100
ELSEIF ABL:노출벽 >= 5
	LOCAL:11 = 50
ENDIF

;노출벽이 높을 수록 욕정에 보너스
IF ABL:노출벽 == 2
	LOCAL:7 = 500
ELSEIF ABL:노출벽 == 3
	LOCAL:7 = 1000
ELSEIF ABL:노출벽 == 4
	LOCAL:7 = 2000
ELSEIF ABL:노출벽 >= 5
	LOCAL:7 = 5000
ENDIF

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 1007

;체력 소비 기본값
LOCAL:12 += 150

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
