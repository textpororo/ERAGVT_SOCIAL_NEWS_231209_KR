;羞恥プレイ

;性コマンド分類
@SEX_TYPE_COM1007
RETURN 통상

@SEX_SPCOM7
;取得パラメータ計算

;ベース値の明示的초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度 상승
TFLAG:3 += 50

;사정値 100
CALL TENTACLE_SYASEI_UP, 100

;촉수サイズの설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1007

;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,-1)


;지문: 세뇌/흑화 캐릭터가 操作キャラに羞恥プレイをした
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_SEX_SPCOM7
	
;지문: SPCOM7
CALL MESSAGE_SEX_SPCOM7

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 4

;ベース
EXP:노출쾌락경험 += 1

;욕정　노출벽が高くなると多くなる
IF ABL:노출벽 == 0
	LOCAL:7 = 50
ELSEIF ABL:노출벽 == 1
	LOCAL:7 = 100
ELSEIF ABL:노출벽 == 2
	LOCAL:7 = 200
ELSEIF ABL:노출벽 == 3
	LOCAL:7 = 500
ELSEIF ABL:노출벽 == 4
	LOCAL:7 = 1000
ELSEIF ABL:노출벽 >= 5
	LOCAL:7 = 2000
ENDIF

;치정　노출벽が高くなると多くなる
IF ABL:노출벽 == 0
	LOCAL:9 = 2000
ELSEIF ABL:노출벽 == 1
	LOCAL:9 = 2500
ELSEIF ABL:노출벽 == 2
	LOCAL:9 = 3500
ELSEIF ABL:노출벽 == 3
	LOCAL:9 = 4500
ELSEIF ABL:노출벽 == 4
	LOCAL:9 = 5000
ELSEIF ABL:노출벽 >= 5
	LOCAL:9 = 5500
ENDIF

;공포　노출벽が高くなると少なくなる
IF ABL:노출벽 == 0
	LOCAL:11 = 2000
ELSEIF ABL:노출벽 == 1
	LOCAL:11 = 1000
ELSEIF ABL:노출벽 == 2
	LOCAL:11 = 500
ELSEIF ABL:노출벽 == 3
	LOCAL:11 = 200
ELSEIF ABL:노출벽 == 4
	LOCAL:11 = 100
ELSEIF ABL:노출벽 >= 5
	LOCAL:11 = 50
ENDIF

;노출벽が高いと욕정にボーナス
IF ABL:노출벽 == 2
	LOCAL:7 = 500
ELSEIF ABL:노출벽 == 3
	LOCAL:7 = 1000
ELSEIF ABL:노출벽 == 4
	LOCAL:7 = 2000
ELSEIF ABL:노출벽 >= 5
	LOCAL:7 = 5000
ENDIF

;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 1007

;체력消費基本値
LOCAL:12 += 150

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
