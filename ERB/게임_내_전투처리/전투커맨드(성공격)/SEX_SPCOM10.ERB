;Ａ확장 공격

;성 커맨드 분류
@SEX_TYPE_COM1010
RETURN 삽입

@SEX_SPCOM10
;EX_COM	추가 고문 실행 부위（비트）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;추가 고문
EX_COM = 4
SH_COM = 0

;사정 부위 플래그:애널을 세운다
TFLAG:4 = TFLAG:4 | 애널
INSERT = INSERT | 애널

;취득 파라미터 계산
;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 100

;사정치 800
CALL TENTACLE_SYASEI_UP, 800

;참기：대량 사정이 아니면 사정 부위 플래그를 접는다
SIF FLAG:15 < FLAG:14 * 2
	TFLAG:4 = 0

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1010

;쾌Ａ
IF ABL:Ａ감각 == 0
	LOCAL:2 = 1000
ELSEIF ABL:Ａ감각 == 1
	LOCAL:2 = 2000
ELSEIF ABL:Ａ감각 == 2
	LOCAL:2 = 4000
ELSEIF ABL:Ａ감각 == 3
	LOCAL:2 = 10000
ELSEIF ABL:Ａ감각 == 4
	LOCAL:2 = 20000
ELSEIF ABL:Ａ감각 >= 5
	LOCAL:2 = 40000
ENDIF
;확장 경험이 적은 경우에는 쾌Ａ가 들어가기 어렵다
IF EXP:Ａ확장경험 < 3
	TIMES LOCAL:2, 0.10
ELSEIF EXP:Ａ확장경험 < 5
	TIMES LOCAL:2, 0.50
ELSEIF EXP:Ａ확장경험 < 8
	TIMES LOCAL:2, 0.80
ELSE
ENDIF

;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,2,-1)


;지문: SPCOM10
CALL MESSAGE_SEX_SPCOM10, EX_COM, SH_COM

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 2

;BASE
EXP:Ａ경험 += 5
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:근친교배경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:근친교배경험 += 1




;굴복
;확장 경험에 정비례
IF EXP:Ａ확장경험 < 3
	LOCAL:8 = 2000
ELSEIF EXP:Ａ확장경험 < 5
	LOCAL:8 = 4000
ELSEIF EXP:Ａ확장경험 < 8
	LOCAL:8 = 8000
ELSE
	LOCAL:8 = 20000
ENDIF

;치정
;확장 경험이 높을 수록 들어간다
IF EXP:Ａ확장경험 < 3
	LOCAL:9 = 200
ELSEIF EXP:Ａ확장경험 < 5
	LOCAL:9 = 400
ELSEIF EXP:Ａ확장경험 < 8
	LOCAL:9 = 800
ELSE
	LOCAL:9 = 2000
ENDIF

;고통
;확장 경험이 낮을 수록 들어간다
IF EXP:Ａ확장경험 < 3
	LOCAL:10 += 4000
ELSEIF EXP:Ａ확장경험 < 5
	LOCAL:10 += 3200
ELSEIF EXP:Ａ확장경험 < 8
	LOCAL:10 += 1600
ELSE
	LOCAL:10 += 400
ENDIF

;공포
;확장 경험이 낮을 수록 들어간다
IF EXP:Ａ확장경험 < 3
	LOCAL:11 = 8000
ELSEIF EXP:Ａ확장경험 < 5
	LOCAL:11 = 6400
ELSEIF EXP:Ａ확장경험 < 8
	LOCAL:11 = 3200
ELSE
	LOCAL:11 = 800
ENDIF

;습득
IF ABL:봉사정신 == 0
	LOCAL:6 = 10
ELSEIF ABL:봉사정신 == 1
	LOCAL:6 = 20
ELSEIF ABL:봉사정신 == 2
	LOCAL:6 = 50
ELSEIF ABL:봉사정신 == 3
	LOCAL:6 = 100
ELSEIF ABL:봉사정신 == 4
	LOCAL:6 = 200
ELSEIF ABL:봉사정신 >= 5
	LOCAL:6 = 500
ENDIF

;윤활이 낮으면 고통이 들어간다
SIF PALAM:윤활 < 2000
	LOCAL:10 += 2000

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 1010

;습득 기본값
LOCAL:6 += 2000

;욕정 기본값
LOCAL:7 += 0

;굴복 기본값
LOCAL:8 += 4000

;치정 기본값
LOCAL:9 += 500

;고통 기본값
LOCAL:10 += 2000

;공포 기본값
LOCAL:11 += 1000

;체력 소비 기본값
LOCAL:12 += 50

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12

