;A攻め弱

;性コマンド分類
@SEX_TYPE_COM4
RETURN 통상

@SEX_COM4,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 25

;사정値 100
CALL TENTACLE_SYASEI_UP, 100

;촉수サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 4

;快A　感覚が低いうちは少なめ
IF CONFIG_CHECK_BALANCE_F(7) == 0
	IF ABL:A감각 == 0
		LOCAL:2 = 40
	ELSEIF ABL:A감각 == 1
		LOCAL:2 = 400
	ELSEIF ABL:A감각 == 2
		LOCAL:2 = 1000
	ELSEIF ABL:A감각 == 3
		LOCAL:2 = 2000
	ELSEIF ABL:A감각 == 4
		LOCAL:2 = 4000
	ELSEIF ABL:A감각 >= 5
		LOCAL:2 = 10000
	ENDIF
;컨피그オンで쾌A増加
ELSEIF CONFIG_CHECK_BALANCE_F(7) > 0
	IF ABL:A감각 == 0
		LOCAL:2 = 500
	ELSEIF ABL:A감각 == 1
		LOCAL:2 = 1000
	ELSEIF ABL:A감각 == 2
		LOCAL:2 = 2000
	ELSEIF ABL:A감각 == 3
		LOCAL:2 = 4000
	ELSEIF ABL:A감각 == 4
		LOCAL:2 = 8000
	ELSEIF ABL:A감각 >= 5
		LOCAL:2 = 10000
	ENDIF
ENDIF
;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,2,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM4, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 操作キャラにA攻め弱をした
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM4
	;지문: COM4
	CALL MESSAGE_SEX_COM4, EX_COM, SH_COM
ENDIF

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 4

;ベース
SIF EX_COM & Ａ
	EXP:A경험 += 1



;굴복
IF ABL:A감각 == 0
	LOCAL:8 = 100
ELSEIF ABL:A감각 == 1
	LOCAL:8 = 200
ELSEIF ABL:A감각 == 2
	LOCAL:8 = 500
ELSEIF ABL:A감각 == 3
	LOCAL:8 = 1000
ELSEIF ABL:A감각 == 4
	LOCAL:8 = 2000
ELSEIF ABL:A감각 >= 5
	LOCAL:8 = 4500 * ABL:A감각 * 100
ENDIF

;感覚と윤활が低いと고통が入る
IF ABL:A감각 < 3
	IF PALAM:윤활 < 100
		LOCAL:10 = 1000
	ELSEIF PALAM:윤활 < 10000
		LOCAL:10 = 100
	ELSE
		LOCAL:10 = 10
	ENDIF
ELSE
	IF PALAM:윤활 < 100
		LOCAL:10 = 100
	ELSEIF PALAM:윤활 < 10000
		LOCAL:10 = 10
	ELSE
	ENDIF
ENDIF
SIF BASE:A결계내구력 > 0
	LOCAL:10 = 0

;感覚が低いと공포が入る
IF ABL:A감각 == 0
	LOCAL:11 = 1000
ELSEIF ABL:A감각 == 1
	LOCAL:11 = 500
ELSEIF ABL:A감각 == 2
	LOCAL:11 = 200
ELSE
ENDIF
SIF BASE:A결계내구력 > 0
	LOCAL:11 /= 2

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ａ, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 4

;습득基本値
LOCAL:6 += 0

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 500

;고통基本値
LOCAL:10 += 100

;공포基本値
LOCAL:11 += 100

;체력消費基本値
LOCAL:12 += 50

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
