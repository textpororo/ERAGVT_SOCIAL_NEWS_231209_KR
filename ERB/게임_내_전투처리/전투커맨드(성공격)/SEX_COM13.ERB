;絶頂禁止

;性コマンド分類
@SEX_TYPE_COM13
RETURN 통상

@SEX_COM13, ARG = 0, ARG:1 = 0
;取得パラメータ計算
VARSET EX_COM
VARSET SH_COM
IF RAND:3 == 0 || TCVARn:40
	;追加責め（特定部位なし）
	CALL SEX_COMEX_RANDOM, 0, ARG:1
	EX_COM = RESULT:0
	SH_COM = RESULT:1
ENDIF

;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度 상승
TFLAG:3 += 5

;사정値 10
CALL TENTACLE_SYASEI_UP, 10

;촉수サイズの설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 13

;メイン部位絶頂見込みの予測
CALL PALAM_VABCestimate(LOCAL,-1)


;지문: 세뇌/흑화 캐릭터가 操作キャラに絶頂禁止をした
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_SEX_COM13
	
;지문: COM13
CALL MESSAGE_SEX_COM13, EX_COM, SH_COM

;結界による촉수本数の変動
CALL SET_TENTACLE_POOL

;ベース
;굴복　마조끼で変化
IF ABL:15 == 0
	LOCAL:8 = 200
ELSEIF ABL:15 == 1
	LOCAL:8 = 400
ELSEIF ABL:15 == 2
	LOCAL:8 = 1000
ELSEIF ABL:15 == 3
	LOCAL:8 = 2000
ELSEIF ABL:15 == 4
	LOCAL:8 = 4000
ELSEIF ABL:15 == 5
	LOCAL:8 = 10000
ENDIF

;공포　순종と마조끼で大まかに
IF ABL:10 < 3
	IF ABL:15 < 3
		LOCAL:11 = 5000
	ELSE
		LOCAL:11 = 500
	ENDIF
ELSE
	IF ABL:15 < 3
		LOCAL:11 = 500
	ELSE
		LOCAL:11 = 50
	ENDIF
ENDIF

IF TCVARn:40 > 0
	TCVARn:40 = 0
ELSE
	;絶頂禁止のターン数
	TCVARn:40 = RAND:LIMIT((50 - TFLAG:0) / 5, 1, 50) + 3
ENDIF

IF EX_COM
	;追加責め実行
	CALL SEX_COMEX, 0, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;촉수の行動を記録
TFLAG:20 = 13

;습득基本値
LOCAL:6 += 0

;욕정基本値
LOCAL:7 += 0

;굴복基本値
LOCAL:8 += 500

;치정基本値
LOCAL:9 += 0

;고통基本値
LOCAL:10 += 0

;공포基本値
LOCAL:11 += 1000

;체력消費基本値
LOCAL:12 += 250

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
