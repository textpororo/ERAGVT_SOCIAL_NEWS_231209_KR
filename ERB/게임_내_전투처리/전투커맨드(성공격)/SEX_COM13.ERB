;절정 금지

;성 커맨드 분류
@SEX_TYPE_COM13
RETURN 통상

@SEX_COM13, ARG = 0, ARG:1 = 0
;취득 파라미터 계산
VARSET EX_COM
VARSET SH_COM
IF RAND:3 == 0 || TCVARn:40
	;추가 고문（特定部位なし）
	CALL SEX_COMEX_RANDOM, 0, ARG:1
	EX_COM = RESULT:0
	SH_COM = RESULT:1
ENDIF

;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 5

;사정치 10
CALL TENTACLE_SYASEI_UP, 10

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 13

;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,-1)


;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 절정 금지를 했다
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_SEX_COM13
	
;지문: COM13
CALL MESSAGE_SEX_COM13, EX_COM, SH_COM

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL

;BASE
;굴복　마조끼로 변화
IF ABL:15 == 0
	LOCAL:8 = 200
ELSEIF ABL:15 == 1
	LOCAL:8 = 400
ELSEIF ABL:15 == 2
	LOCAL:8 = 1000
ELSEIF ABL:15 == 3
	LOCAL:8 = 2000
ELSEIF ABL:15 == 4
	LOCAL:8 = 4000
ELSEIF ABL:15 == 5
	LOCAL:8 = 10000
ENDIF

;공포　대충 순종과 마조끼로
IF ABL:10 < 3
	IF ABL:15 < 3
		LOCAL:11 = 5000
	ELSE
		LOCAL:11 = 500
	ENDIF
ELSE
	IF ABL:15 < 3
		LOCAL:11 = 500
	ELSE
		LOCAL:11 = 50
	ENDIF
ENDIF

IF TCVARn:40 > 0
	TCVARn:40 = 0
ELSE
	;절정 금지의 턴수
	TCVARn:40 = RAND:LIMIT((50 - TFLAG:0) / 5, 1, 50) + 3
ENDIF

IF EX_COM
	;추가 고문 실행
	CALL SEX_COMEX, 0, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 13

;습득 기본값
LOCAL:6 += 0

;욕정 기본값
LOCAL:7 += 0

;굴복 기본값
LOCAL:8 += 500

;치정 기본값
LOCAL:9 += 0

;고통 기본값
LOCAL:10 += 0

;공포 기본값
LOCAL:11 += 1000

;체력 소비 기본값
LOCAL:12 += 250

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
