;설득해본다
@COM47

;距離表示
CALL PRINT_DISTANCE
PRINTL 

;油断度の上昇
TFLAG:3 += 5

;방어フラグ：설득해본다にする
TCVARn:2 = 자세：설득해본다

;지문: 설득해본다
CALL MESSAGE_BATTLE_CHARA_PERSUADE
;지문: 洗脳/悪堕ちキャラが操作キャラの설득해본다を見た
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_BATTLE_CHARA_PERSUADE

;成否判定
LOCAL:0 = MAXBASE:지성

;衣装による補正
CALL CLOTH_BATTLE_HOSEI, "CHISEI"
LOCAL:0 = LOCAL:0 * RESULT / 100

;心境による補正
CALL SHINKYOU_CHECK, "CHISEI", LOCAL:0
LOCAL:0 = RESULT

;보스 촉수/敵キャラの지성
IF ENEMY_TYPE_CHECK_F("AKUOTI")
	LOCAL:1 = MAXBASE:(FLAG:111):지성
ELSE
	CALL TENTACLE_ACCESS, "CHISEI"
	LOCAL:1 = RESULT
ENDIF

CALL PERCENT_CAL, LOCAL:0, LOCAL:1
IF RAND:360 + 90 < RESULT
	LOCAL = 650 + RAND:RESULT / 2
	LOCALS = {LOCAL}
	TOFULL LOCALS
	TFLAG:3 += LOCAL
	PRINTFORML 迫真の言葉に相手は動揺している！
	PRINTFORML 油断度＋（%RESULTS%）
ELSEIF RAND:240 + 60 < RESULT
	LOCAL = 400 + RAND:RESULT / 2
	LOCALS = {LOCAL}
	TOFULL LOCALS
	TFLAG:3 += LOCAL
	PRINTFORML 相手を少し動揺させることができたようだ・・・
	PRINTFORML 油断度＋（%RESULTS%）
ELSEIF RAND:180 + 30 < RESULT
	LOCAL = 250 + RAND:RESULT / 4
	LOCALS = {LOCAL}
	TOFULL LOCALS
	TFLAG:3 += LOCAL
	PRINTFORML 相手の瞳の奥に微かな変化があったようにも見える・・・
	PRINTFORML 油断度＋（%RESULTS%）
ELSE
	PRINTFORML 相手は聞く耳を持たない様子だ・・・
ENDIF
PRINTL 

;행동포인트を+1
EX:행동포인트 += 1

IF TCVARn:1 > 0 && RAND:100 < (TCVARn:11 * 10)
	TCVARn:1 = 6
	PRINTFORM %PRINT_CALLNAME(TARGET)%の心境が
	CALL SHINKYOU_CHECK, "PRINT", 0
	PRINTL に変化した
ELSE
	TCVARn:11 ++
ENDIF
PRINTL 
RETURN 1
