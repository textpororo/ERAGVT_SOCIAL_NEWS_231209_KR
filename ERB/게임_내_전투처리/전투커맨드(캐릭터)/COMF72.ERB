@COM72

;플레이어 게이지 증감
IF GETBIT(TCVARn:3, 1) == 0
	IF CFLAG:1 == 2
		IF TCVARn:217
			TCVARn:6 += -68
		ELSE
			TCVARn:6 += -34
		ENDIF
	ELSE
		TCVARn:6 += -100
	ENDIF
ELSE
	IF CFLAG:1 == 2
		IF TCVARn:217
			TCVARn:6 += 68
		ELSE
			TCVARn:6 += 34
		ENDIF
	ELSE
		TCVARn:6 += 100
	ENDIF
ENDIF

;게이지 사용 플래그
INVERTBIT TCVARn:3, 1

RETURN 0
