;봉사한다
@COM13

;距離表示
CALL PRINT_DISTANCE
PRINTL 

;사정部位フラグ:手を立てる
TFLAG:4 = TFLAG:4 | 손
;기교が２以上なら口を立てる
SIF ABL:기교 >= 2
	TFLAG:4 = TFLAG:4 | 입
;강구속中は사정部位플래그를折る
SIF (TCVARn:12 & 강구속)
	TFLAG:4 = 0

;방어フラグ：봉사한다にする
TCVARn:2 = 자세：봉사한다

;방심도 상승
TFLAG:3 += 100

;사정 기교依存
IF ABL:기교 < 2
	LOCAL = 70
ELSEIF ABL:기교 == 2
	LOCAL = 100
ELSEIF ABL:기교 == 3
	LOCAL = 140
ELSEIF ABL:기교 == 4
	LOCAL = 190
ELSEIF ABL:기교 >= 5
	LOCAL = 250
ENDIF
CALL TENTACLE_SYASEI_UP, LOCAL

;지문: 봉사한다
CALL MESSAGE_BATTLE_CHARA_HOUSI
;지문: 세뇌/흑화 캐릭터가 조작 캐릭터의「봉사한다」를 봤다
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
	CALL MESSAGE_OTHER_BATTLE_CHARA_HOUSI

;행동포인트を+1
EX:행동포인트 += 1

RETURN 1
