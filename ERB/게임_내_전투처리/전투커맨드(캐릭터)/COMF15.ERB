;각인에 의한 행동 제한 판정　１이면 행동할 수 없다
CALL ACT_LIMIT
SIF RESULT == 1
	RETURN 1

;거리 표시
CALL PRINT_DISTANCE
PRINTL 

;지문
CALL MESSAGE_BATTLE_CHARA_KYUUSHUTU
