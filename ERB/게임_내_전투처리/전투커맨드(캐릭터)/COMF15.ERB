@KYUSHUTU_SUCCESS
LOCAL:0 = 0
CALL PRISON_CHARA
SIF RESULT <0
	RETURN 0
LOCAL:0 = RESULT
CALL MESSAGE_KYUUSHUTU_SUCCESS
LOCAL:1 = TARGET
TARGET = LOCAL:0
;지문: 구출된 쪽의 구상
CALL MESSAGE_ESCAPE_RESCUED
TARGET = LOCAL:1
LOCAL:1 = 1
CFLAG:(LOCAL:0):0 = -1
CFLAG:(LOCAL:0):20 = 0
CFLAG:(LOCAL:0):21 = 0
CFLAG:(LOCAL:0):30 = 0
CFLAG:(LOCAL:0):31 = 0
BASE:(LOCAL:0):체력 = 1
BASE:(LOCAL:0):기력 = 1
BASE:(LOCAL:0):성내성 = 1

;-----------------------------------
;구출 커맨드 성공 판정
;-----------------------------------	
@ACT_HANTEI_CHARA_TO_TENTACLE_KYUUSHUTU
;유폐 중인 캐릭터가 아니면 구출 성공하지 않는다


;캐릭터의 체력＋기력의 잔량을 구한다
LOCAL:0 = PERCENT_CAL_F(BASE:체력 * 2 + BASE:기력, MAXBASE:체력 * 2 + MAXBASE:기력)

;촉수의 체력 잔량에 따른 보정
CALL PERCENT_CAL, FLAG:13, FLAG:12
IF RESULT > 50
	LOCAL:1 = 100
ELSEIF RESULT > 25
	LOCAL:1 = 105
ELSE
	LOCAL:1 = 110
ENDIF

;캐릭터의 민첩
LOCAL:2 = MAXBASE:민첩

;왜소함・장신이라면 민첩에 보정
SIF TALENT:왜소함 == 1
	TIMES LOCAL:2, 0.90
SIF TALENT:장신 == 1
	TIMES LOCAL:2, 1.20

;변신능력이 있는 캐릭터의 보정
LOCAL:2 = CORRECTION_TRANS(LOCAL:2)

;의상에 따른 보정
CALL CLOTH_BATTLE_HOSEI, "BINSYOU"
LOCAL:2 = LOCAL:2 * RESULT / 100

;심경의 보정
CALL SHINKYOU_CHECK, "BINSYOU", LOCAL:2
LOCAL:2 = RESULT

;촉수의 민첩
CALL TENTACLE_ACCESS, "BINSYOU"
LOCAL:3 = RESULT

;촉수의 방심에 따른 보정
SIF TFLAG:2 == 1
	TIMES LOCAL:3, 0.50

;민첩차에 따른 보정
LOCAL:4 = CORRECTION_BINSYOU_F(PERCENT_CAL_F(LOCAL:2, LOCAL:3))

;성공치 계산
LOCAL:5 = (LOCAL:0 / 2 + 50) * LOCAL:1 * LOCAL:4 / 10000
;구출 성공률의 최고치는 10%
SIF LOCAL:5 > 50
	LOCAL:5 = 50
;구출 성공률의 최저치는 10%
SIF LOCAL:5 < 10
	LOCAL:5 = 10

;debug일 경우 상세 표시
IF FLAG:999 == 1
	PRINTFORML LOCAL:0 ＝ {LOCAL:0}
	PRINTFORML LOCAL:1 ＝ {LOCAL:1}
	PRINTFORML LOCAL:2 ＝ {LOCAL:2}
	PRINTFORML LOCAL:3 ＝ {LOCAL:3}
	PRINTFORML LOCAL:4 ＝ {LOCAL:4}
	PRINTFORML 행동 성공률：{LOCAL:5}
ENDIF

IF RAND:100 < LOCAL:5
	RETURN 1
ELSE 
	RETURN 0
ENDIF

RETURN RESULT