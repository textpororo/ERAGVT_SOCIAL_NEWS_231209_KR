;SP変身
@COM73

;距離表示
CALL PRINT_DISTANCE
PRINTL 

;지문: SP変身
CALL MESSAGE_BATTLE_CHARA_SP_TRANSFORMCALL

;SPモード
CFLAG:1 = 2
TCVARn:5 = TCVARn:4
TCVARn:4 = 0

;状態異常が治る
IF TCVARn:12 > 0
	PRINTFORML %PRINT_TRANSCALLNAME(TARGET)%의 状態異常が治った！
	PRINTL 
	TCVARn:12 = 0
ENDIF

;心境の変化
;性格の成長補正と心境の스테이터스補正が近いもの
CALL SEIKAKU_CHECK, "GET_TALENT_VALUE", TARGET

;SP変身구상から続けて心境구상は不自然なので、地の文を呼び出さずにここで直書きする
PRINTFORM %PRINT_TRANSCALLNAME(TARGET)%은(는) 

;「怒り」になる性格：게으름, 고풍적, 사나움
IF RESULT == 15 || RESULT == 24 || RESULT == 27
	TCVARn:1 = 2
	PRINT 怒り
;「冷静」になる性格：겁쟁이, 부끄럼쟁이, 대범함, 낙천적, 비관적, 과묵함
ELSEIF RESULT == 10 || RESULT == 11 || RESULT == 14 || RESULT == 17 || RESULT == 18 || RESULT == 22
	TCVARn:1 = 4
	PRINT 冷静
;「高揚」になる性格：その他
ELSE
	TCVARn:1 = 6
	PRINT 高揚
ENDIF

PRINTL 状態 になった
;心境の持続ターンをリセット
TCVARn:11 = 0

;アウター（変身後）のダメージが全回復する
SIF CFLAG:41 != 0
	TCVARn:23 = TCVARn:22

;相手を怯ませる
TFLAG:1 = 1

;反動で疲労蓄積
TFLAG:99 += 3

;自動で戦闘メニューを選択する
TCVARn:8 = 1

RETURN 1
