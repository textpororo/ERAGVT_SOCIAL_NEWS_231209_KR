IF CFLAG:1 > 0
	SELECTCASE CFLAG:100
		CASE 4
			CALL GET_SEIKAKU_KOJO_4(TARGET,K4특별활동_변신)
		CASE 8
			CALL GET_SEIKAKU_KOJO_4(TARGET,K4자유행동_변신)
	ENDSELECT
ELSE
	SELECTCASE CFLAG:100
		CASE 4
			CALL GET_SEIKAKU_KOJO_4(TARGET,K4특별활동)
		CASE 8
			CALL GET_SEIKAKU_KOJO_4(TARGET,K4자유행동)
	ENDSELECT
ENDIF
TRYCALLFORM KOJO_{RESULT:0}_COLOR_{RESULT:1}
TRYCALLFORM KOJO_{RESULT:0}_SEISAN_%ARGS%_{RESULT:1}

